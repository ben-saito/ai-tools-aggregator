---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import ToolCard from '../components/ToolCard.astro';
import SearchBar from '../components/SearchBar.astro';
import TrendingTools from '../components/TrendingTools.astro';
import Leaderboard from '../components/Leaderboard.astro';
import { getAllTools, getFeaturedTools, categories } from '../lib/tools';
import { getLangFromUrl, useTranslations } from '../lib/i18n';
import { getSkillsRanking } from '../lib/skills-ranking';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const tools = getAllTools();
const featuredTools = getFeaturedTools();

// Get top 6 skills
let topSkills = [];
try {
  const allSkills = await getSkillsRanking();
  topSkills = allSkills.slice(0, 6);
} catch (e) {
  console.error('Error loading skills:', e);
}

// Schema.org structured data
const schemaData = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "AI Tools Hub",
  "description": t('hero.description'),
  "url": "https://ai-tools-aggregator-seven.vercel.app",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://ai-tools-aggregator-seven.vercel.app/search?q={search_term_string}",
    "query-input": "required name=search_term_string"
  },
  "publisher": {
    "@type": "Organization",
    "name": "AI Tools Hub",
    "url": "https://ai-tools-aggregator-seven.vercel.app"
  }
};
---

<Layout title={`${t('hero.title')} ${t('hero.subtitle')}`}>
  <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-b from-primary-50 to-[var(--color-bg-primary)] dark:from-primary-950/30 dark:to-[var(--color-bg-primary)] py-16 md:py-24">
      <div class="mx-auto max-w-7xl px-4">
        <div class="text-center">
          <h1 class="animate-fade-up text-4xl font-bold tracking-tight text-[var(--color-text-primary)] sm:text-5xl md:text-6xl">
            {t('hero.title')}<br />
            <span class="gradient-text">{t('hero.subtitle')}</span>
          </h1>
          <p class="mx-auto mt-6 max-w-2xl text-lg text-[var(--color-text-secondary)] animate-fade-up" style="animation-delay: 100ms;">
            {t('hero.description')}
          </p>

          <!-- Features -->
          <div class="mx-auto mt-10 grid max-w-4xl gap-6 sm:grid-cols-3 reveal-stagger">
            <div class="reveal rounded-xl bg-[var(--color-bg-elevated)] p-6 shadow-[var(--shadow-card)] border border-[var(--color-border-secondary)] transition-all duration-200 hover:-translate-y-0.5 hover:shadow-[var(--shadow-card-hover)]">
              <div class="mx-auto flex h-10 w-10 items-center justify-center rounded-lg bg-primary-100 dark:bg-primary-900/30">
                <svg class="h-5 w-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" /></svg>
              </div>
              <h3 class="mt-3 font-semibold text-[var(--color-text-primary)]">{t('hero.feature1')}</h3>
              <p class="mt-1 text-sm text-[var(--color-text-secondary)]">{t('hero.feature1.desc')}</p>
            </div>
            <div class="reveal rounded-xl bg-[var(--color-bg-elevated)] p-6 shadow-[var(--shadow-card)] border border-[var(--color-border-secondary)] transition-all duration-200 hover:-translate-y-0.5 hover:shadow-[var(--shadow-card-hover)]">
              <div class="mx-auto flex h-10 w-10 items-center justify-center rounded-lg bg-primary-100 dark:bg-primary-900/30">
                <svg class="h-5 w-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
              </div>
              <h3 class="mt-3 font-semibold text-[var(--color-text-primary)]">{t('hero.feature2')}</h3>
              <p class="mt-1 text-sm text-[var(--color-text-secondary)]">{t('hero.feature2.desc')}</p>
            </div>
            <div class="reveal rounded-xl bg-[var(--color-bg-elevated)] p-6 shadow-[var(--shadow-card)] border border-[var(--color-border-secondary)] transition-all duration-200 hover:-translate-y-0.5 hover:shadow-[var(--shadow-card-hover)]">
              <div class="mx-auto flex h-10 w-10 items-center justify-center rounded-lg bg-primary-100 dark:bg-primary-900/30">
                <svg class="h-5 w-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4" /></svg>
              </div>
              <h3 class="mt-3 font-semibold text-[var(--color-text-primary)]">{t('hero.feature3')}</h3>
              <p class="mt-1 text-sm text-[var(--color-text-secondary)]">{t('hero.feature3.desc')}</p>
            </div>
          </div>

          <!-- Search Bar CTA -->
          <div class="mx-auto mt-10 max-w-2xl animate-fade-up" style="animation-delay: 200ms;">
            <SearchBar />
            <p class="mt-4 text-sm text-[var(--color-text-tertiary)]">{t('cta.subtitle')}</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="reveal border-y border-[var(--color-border-primary)] bg-[var(--color-bg-elevated)] py-12">
      <div class="mx-auto max-w-7xl px-4">
        <div class="grid gap-8 sm:grid-cols-4 text-center">
          <div>
            <div class="text-4xl font-bold text-primary-600">{tools.length}+</div>
            <div class="mt-2 text-sm text-[var(--color-text-secondary)]">{t('stats.tools')}</div>
          </div>
          <div>
            <div class="text-4xl font-bold text-primary-600">{categories.length}</div>
            <div class="mt-2 text-sm text-[var(--color-text-secondary)]">{t('stats.categories')}</div>
          </div>
          <div>
            <div class="text-4xl font-bold text-primary-600">500+</div>
            <div class="mt-2 text-sm text-[var(--color-text-secondary)]">{t('stats.reviews')}</div>
          </div>
          <div>
            <div class="text-4xl font-bold text-primary-600">1000+</div>
            <div class="mt-2 text-sm text-[var(--color-text-secondary)]">{t('stats.users')}</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Problem Section -->
    <section class="reveal bg-[var(--color-bg-secondary)] py-16">
      <div class="mx-auto max-w-7xl px-4">
        <h2 class="text-center text-3xl font-bold text-[var(--color-text-primary)]">{t('problem.title')}</h2>
        <div class="mx-auto mt-10 grid max-w-3xl gap-4">
          <div class="flex items-start gap-3 rounded-xl bg-[var(--color-bg-elevated)] p-6 shadow-[var(--shadow-card)] border border-[var(--color-border-secondary)]">
            <span class="text-2xl">&#10060;</span>
            <p class="text-[var(--color-text-secondary)]">{t('problem.1')}</p>
          </div>
          <div class="flex items-start gap-3 rounded-xl bg-[var(--color-bg-elevated)] p-6 shadow-[var(--shadow-card)] border border-[var(--color-border-secondary)]">
            <span class="text-2xl">&#9200;</span>
            <p class="text-[var(--color-text-secondary)]">{t('problem.2')}</p>
          </div>
          <div class="flex items-start gap-3 rounded-xl bg-[var(--color-bg-elevated)] p-6 shadow-[var(--shadow-card)] border border-[var(--color-border-secondary)]">
            <span class="text-2xl">&#129300;</span>
            <p class="text-[var(--color-text-secondary)]">{t('problem.3')}</p>
          </div>
          <div class="flex items-start gap-3 rounded-xl bg-[var(--color-bg-elevated)] p-6 shadow-[var(--shadow-card)] border border-[var(--color-border-secondary)]">
            <span class="text-2xl">&#128203;</span>
            <p class="text-[var(--color-text-secondary)]">{t('problem.4')}</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Solution Section -->
    <section class="reveal py-16">
      <div class="mx-auto max-w-7xl px-4">
        <h2 class="text-center text-3xl font-bold text-[var(--color-text-primary)]">{t('solution.title')}</h2>
        <div class="mx-auto mt-10 grid max-w-5xl gap-8 md:grid-cols-2 reveal-stagger">
          <div class="reveal rounded-xl border border-[var(--color-border-primary)] bg-[var(--color-bg-elevated)] p-8 shadow-[var(--shadow-card)] transition-all duration-200 hover:-translate-y-0.5 hover:shadow-[var(--shadow-card-hover)]">
            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-green-100 dark:bg-green-900/30">
              <svg class="h-5 w-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
            </div>
            <h3 class="mt-4 text-xl font-semibold text-[var(--color-text-primary)]">{t('solution.1.title')}</h3>
            <p class="mt-3 text-[var(--color-text-secondary)]">{t('solution.1.desc')}</p>
          </div>
          <div class="reveal rounded-xl border border-[var(--color-border-primary)] bg-[var(--color-bg-elevated)] p-8 shadow-[var(--shadow-card)] transition-all duration-200 hover:-translate-y-0.5 hover:shadow-[var(--shadow-card-hover)]">
            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-yellow-100 dark:bg-yellow-900/30">
              <svg class="h-5 w-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
            </div>
            <h3 class="mt-4 text-xl font-semibold text-[var(--color-text-primary)]">{t('solution.2.title')}</h3>
            <p class="mt-3 text-[var(--color-text-secondary)]">{t('solution.2.desc')}</p>
          </div>
          <div class="reveal rounded-xl border border-[var(--color-border-primary)] bg-[var(--color-bg-elevated)] p-8 shadow-[var(--shadow-card)] transition-all duration-200 hover:-translate-y-0.5 hover:shadow-[var(--shadow-card-hover)]">
            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary-100 dark:bg-primary-900/30">
              <svg class="h-5 w-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" /></svg>
            </div>
            <h3 class="mt-4 text-xl font-semibold text-[var(--color-text-primary)]">{t('solution.3.title')}</h3>
            <p class="mt-3 text-[var(--color-text-secondary)]">{t('solution.3.desc')}</p>
          </div>
          <div class="reveal rounded-xl border border-[var(--color-border-primary)] bg-[var(--color-bg-elevated)] p-8 shadow-[var(--shadow-card)] transition-all duration-200 hover:-translate-y-0.5 hover:shadow-[var(--shadow-card-hover)]">
            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-accent-100 dark:bg-accent-900/30">
              <svg class="h-5 w-5 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            </div>
            <h3 class="mt-4 text-xl font-semibold text-[var(--color-text-primary)]">{t('solution.4.title')}</h3>
            <p class="mt-3 text-[var(--color-text-secondary)]">{t('solution.4.desc')}</p>
          </div>
        </div>
      </div>
    </section>

    <!-- How It Works -->
    <section class="reveal bg-primary-50 dark:bg-primary-950/20 py-16">
      <div class="mx-auto max-w-7xl px-4">
        <h2 class="text-center text-3xl font-bold text-[var(--color-text-primary)]">{t('howitworks.title')}</h2>
        <div class="mx-auto mt-10 grid max-w-4xl gap-8 md:grid-cols-3">
          <div class="text-center">
            <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-primary-600 text-2xl font-bold text-white">1</div>
            <h3 class="mt-4 text-xl font-semibold text-[var(--color-text-primary)]">{t('howitworks.step1')}</h3>
            <p class="mt-2 text-[var(--color-text-secondary)]">{t('howitworks.step1.desc')}</p>
          </div>
          <div class="text-center">
            <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-primary-600 text-2xl font-bold text-white">2</div>
            <h3 class="mt-4 text-xl font-semibold text-[var(--color-text-primary)]">{t('howitworks.step2')}</h3>
            <p class="mt-2 text-[var(--color-text-secondary)]">{t('howitworks.step2.desc')}</p>
          </div>
          <div class="text-center">
            <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-primary-600 text-2xl font-bold text-white">3</div>
            <h3 class="mt-4 text-xl font-semibold text-[var(--color-text-primary)]">{t('howitworks.step3')}</h3>
            <p class="mt-2 text-[var(--color-text-secondary)]">{t('howitworks.step3.desc')}</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Tools & Leaderboard -->
    <section class="mx-auto max-w-7xl px-4 py-16">
      <div class="mb-12">
        <Leaderboard title="Today's Top Launches" />
      </div>

      <div class="mb-12">
        <h2 class="mb-6 text-2xl font-bold text-[var(--color-text-primary)]">{t('common.featured')}</h2>
        <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
          {featuredTools.map((tool) => (
            <ToolCard {...tool} />
          ))}
        </div>
      </div>

      <!-- Skills Ranking Section -->
      {topSkills.length > 0 && (
        <div class="mb-12 reveal">
          <div class="flex items-center justify-between mb-6">
            <div>
              <h2 class="text-2xl font-bold text-[var(--color-text-primary)]">{t('skills.title')}</h2>
              <p class="text-[var(--color-text-secondary)] mt-1">{t('skills.subtitle')}</p>
            </div>
            <a
              href={lang === 'ja' ? '/ja/skills' : '/skills'}
              class="text-primary-600 hover:text-primary-700 font-semibold text-sm"
            >
              {t('skills.viewAll')} &rarr;
            </a>
          </div>
          <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
            {topSkills.map((skill) => (
              <a
                href={skill.url}
                target="_blank"
                rel="noopener noreferrer"
                class="block rounded-xl border border-[var(--color-border-primary)] bg-[var(--color-bg-elevated)] p-6 shadow-[var(--shadow-card)] transition-all duration-200 hover:-translate-y-0.5 hover:border-primary-500 hover:shadow-[var(--shadow-card-hover)]"
              >
                <div class="flex items-start justify-between mb-3">
                  <div class="flex items-center gap-2">
                    <span class="text-lg font-bold text-[var(--color-text-tertiary)]">#{skill.rank}</span>
                    <h3 class="text-lg font-semibold text-[var(--color-text-primary)]">{skill.name}</h3>
                  </div>
                  <div class="text-right">
                    <div class="text-sm font-bold text-primary-600">{skill.score}</div>
                    <div class="text-xs text-[var(--color-text-tertiary)]">score</div>
                  </div>
                </div>
                {skill.description && (
                  <p class="text-sm text-[var(--color-text-secondary)] mb-3 line-clamp-2">{skill.description}</p>
                )}
                <div class="flex flex-wrap gap-3 text-xs text-[var(--color-text-tertiary)]">
                  <span class="flex items-center gap-1">&#11088; {skill.stars.toLocaleString()}</span>
                  <span class="flex items-center gap-1">&#127860; {skill.forks.toLocaleString()}</span>
                  {skill.language && <span class="flex items-center gap-1">&#128187; {skill.language}</span>}
                </div>
              </a>
            ))}
          </div>
        </div>
      )}

      <!-- Popular Tags Section -->
      <div class="mb-12 reveal">
        <h2 class="mb-6 text-2xl font-bold text-[var(--color-text-primary)]">{t('common.popular')}</h2>
        <div id="popular-tags-container" class="flex flex-wrap gap-2">
          <div class="text-sm text-[var(--color-text-tertiary)]">Loading popular tags...</div>
        </div>
      </div>

      <TrendingTools />

      <div class="mb-12 reveal">
        <h2 class="mb-6 text-2xl font-bold text-[var(--color-text-primary)]">{t('common.browse')}</h2>
        <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
          {categories.map((category) => {
            const categoryTools = tools.filter((tool) => tool.category === category.slug);
            return (
              <a
                href={`/categories/${category.slug}`}
                class="group rounded-xl border border-[var(--color-border-primary)] bg-[var(--color-bg-elevated)] p-6 shadow-[var(--shadow-card)] transition-all duration-200 hover:-translate-y-0.5 hover:border-primary-500 hover:shadow-[var(--shadow-card-hover)]"
              >
                <div class="flex items-center gap-3">
                  <span class="text-4xl">{category.icon}</span>
                  <div class="flex-1">
                    <h3 class="font-semibold text-[var(--color-text-primary)] transition-colors group-hover:text-primary-600">
                      {category.name}
                    </h3>
                    <p class="mt-1 text-sm text-[var(--color-text-tertiary)]">{categoryTools.length} tools</p>
                  </div>
                </div>
              </a>
            );
          })}
        </div>
      </div>

      <div>
        <h2 class="mb-6 text-2xl font-bold text-[var(--color-text-primary)]">{t('common.all')}</h2>
        <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
          {tools.map((tool) => (
            <ToolCard {...tool} />
          ))}
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <section class="bg-gradient-to-r from-primary-600 to-accent-600 py-16">
      <div class="mx-auto max-w-4xl px-4 text-center">
        <h2 class="text-3xl font-bold text-white">{t('cta.final')}</h2>
        <p class="mt-4 text-lg text-primary-100">{t('cta.subtitle')}</p>
        <div class="mx-auto mt-8 max-w-xl">
          <a
            href="#search"
            class="inline-block rounded-lg bg-white px-8 py-3 text-lg font-semibold text-primary-600 shadow-lg transition-all duration-200 hover:bg-[var(--color-bg-secondary)] hover:-translate-y-0.5"
          >
            {t('hero.cta')}
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<script>
  async function loadPopularTags() {
    const container = document.getElementById('popular-tags-container');
    if (!container) return;

    const supabase = window.supabaseClient;
    if (!supabase) {
      console.error('Supabase client not initialized');
      return;
    }

    try {
      const { data: tags, error } = await supabase
        .from('popular_tags')
        .select('tag_name, total_uses, tool_count')
        .limit(20);

      if (error) throw error;

      if (tags && tags.length > 0) {
        const maxUses = Math.max(...tags.map(t => t.total_uses));
        const minUses = Math.min(...tags.map(t => t.total_uses));

        container.innerHTML = tags.map(tag => {
          const sizeRatio = (tag.total_uses - minUses) / (maxUses - minUses || 1);
          const fontSize = 0.875 + (sizeRatio * 0.625);

          return `
            <a
              href="/search?tag=${encodeURIComponent(tag.tag_name)}"
              class="inline-flex items-center gap-1 rounded-full bg-primary-50 dark:bg-primary-900/30 px-3 py-1 font-medium text-primary-700 dark:text-primary-300 hover:bg-primary-100 dark:hover:bg-primary-900/50 transition-colors"
              style="font-size: ${fontSize}rem;"
            >
              ${escapeHtml(tag.tag_name)}
              <span class="text-xs opacity-75">${tag.tool_count}</span>
            </a>
          `;
        }).join('');
      } else {
        container.innerHTML = '<div class="text-sm text-[var(--color-text-tertiary)]">No tags yet. Be the first to add one!</div>';
      }
    } catch (error) {
      console.error('Error loading popular tags:', error);
      container.innerHTML = '<div class="text-sm text-[var(--color-text-tertiary)]">Failed to load tags</div>';
    }
  }

  function escapeHtml(text: string): string {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }

  // Wait for Supabase to be ready
  if (window.__supabaseReady) {
    loadPopularTags();
  } else {
    window.addEventListener('supabase-ready', loadPopularTags);
  }
</script>
