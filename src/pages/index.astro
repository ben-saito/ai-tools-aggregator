---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import ToolCard from '../components/ToolCard.astro';
import SearchBar from '../components/SearchBar.astro';
import TrendingTools from '../components/TrendingTools.astro';
import Leaderboard from '../components/Leaderboard.astro';
import { getAllTools, getFeaturedTools, categories } from '../lib/tools';

const tools = getAllTools();
const featuredTools = getFeaturedTools();

// Schema.org structured data
const schemaData = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "AI Tools Hub",
  "description": "Discover the best AI tools for 2026. Curated directory of 50+ AI tools across 10 categories.",
  "url": "https://ai-tools-aggregator-seven.vercel.app",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://ai-tools-aggregator-seven.vercel.app/search?q={search_term_string}",
    "query-input": "required name=search_term_string"
  },
  "publisher": {
    "@type": "Organization",
    "name": "AI Tools Hub",
    "url": "https://ai-tools-aggregator-seven.vercel.app"
  }
};
---

<Layout title="Discover the Best AI Tools for 2026">
  <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />
  <Header />
  <main class="mx-auto max-w-7xl px-4 py-8">
    <section class="mb-12 text-center">
      <h1 class="text-4xl font-bold">AI Tools Hub</h1>
      <p class="mt-4 text-lg text-gray-600">
        Discover {tools.length}+ curated AI tools across {categories.length} categories
      </p>
      <div class="mx-auto mt-6 max-w-2xl">
        <SearchBar />
      </div>
    </section>

    <section class="mb-12">
      <Leaderboard title="Today's Top Launches" />
    </section>

    <section class="mb-12">
      <h2 class="mb-6 text-2xl font-bold">Featured Tools</h2>
      <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {featuredTools.map((tool) => (
          <ToolCard {...tool} />
        ))}
      </div>
    </section>

    <!-- Popular Tags Section -->
    <section class="mb-12">
      <h2 class="mb-6 text-2xl font-bold">Popular Tags</h2>
      <div id="popular-tags-container" class="flex flex-wrap gap-2">
        <div class="text-sm text-gray-500">Loading popular tags...</div>
      </div>
    </section>

    <TrendingTools />

    <section class="mb-12">
      <h2 class="mb-6 text-2xl font-bold">Browse by Category</h2>
      <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {categories.map((category) => {
          const categoryTools = tools.filter((tool) => tool.category === category.name);
          return (
            <a
              href={`/categories/${category.slug}`}
              class="group rounded-lg border border-gray-200 p-6 transition hover:border-primary-500 hover:shadow-md"
            >
              <div class="flex items-center gap-3">
                <span class="text-4xl">{category.icon}</span>
                <div class="flex-1">
                  <h3 class="font-semibold text-gray-900 group-hover:text-primary-600">
                    {category.name}
                  </h3>
                  <p class="mt-1 text-sm text-gray-500">{categoryTools.length} tools</p>
                </div>
              </div>
            </a>
          );
        })}
      </div>
    </section>

    <section>
      <h2 class="mb-6 text-2xl font-bold">All Tools</h2>
      <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {tools.map((tool) => (
          <ToolCard {...tool} />
        ))}
      </div>
    </section>
  </main>
</Layout>

<script>
  import { supabase } from '../lib/supabase';

  async function loadPopularTags() {
    const container = document.getElementById('popular-tags-container');
    if (!container) return;

    try {
      const { data: tags, error } = await supabase
        .from('popular_tags')
        .select('tag_name, total_uses, tool_count')
        .limit(20);

      if (error) throw error;

      if (tags && tags.length > 0) {
        // Calculate tag sizes based on usage
        const maxUses = Math.max(...tags.map(t => t.total_uses));
        const minUses = Math.min(...tags.map(t => t.total_uses));

        container.innerHTML = tags.map(tag => {
          // Size from 0.875rem to 1.5rem
          const sizeRatio = (tag.total_uses - minUses) / (maxUses - minUses || 1);
          const fontSize = 0.875 + (sizeRatio * 0.625); // 0.875rem to 1.5rem
          
          return `
            <a 
              href="/search?tag=${encodeURIComponent(tag.tag_name)}"
              class="inline-flex items-center gap-1 rounded-full bg-primary-50 px-3 py-1 font-medium text-primary-700 hover:bg-primary-100 transition-colors"
              style="font-size: ${fontSize}rem;"
            >
              ${escapeHtml(tag.tag_name)}
              <span class="text-xs opacity-75">${tag.tool_count}</span>
            </a>
          `;
        }).join('');
      } else {
        container.innerHTML = '<div class="text-sm text-gray-500">No tags yet. Be the first to add one!</div>';
      }
    } catch (error) {
      console.error('Error loading popular tags:', error);
      container.innerHTML = '<div class="text-sm text-gray-500">Failed to load tags</div>';
    }
  }

  function escapeHtml(text: string): string {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }

  // Load when Supabase is ready
  if (window.__supabaseReady) {
    loadPopularTags();
  } else {
    window.addEventListener('supabase-ready', loadPopularTags);
  }
</script>
