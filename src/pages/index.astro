<script>
  async function loadPopularTags() {
    const container = document.getElementById('popular-tags-container');
    if (!container) return;

    const supabase = window.supabaseClient;
    if (!supabase) {
      console.error('Supabase client not initialized');
      return;
    }

    try {
      const { data: tags, error } = await supabase
        .from('popular_tags')
        .select('tag_name, total_uses, tool_count')
        .limit(20);

      if (error) throw error;

      if (tags && tags.length > 0) {
        const maxUses = Math.max(...tags.map(t => t.total_uses));
        const minUses = Math.min(...tags.map(t => t.total_uses));

        container.innerHTML = tags.map(tag => {
          const sizeRatio = (tag.total_uses - minUses) / (maxUses - minUses || 1);
          const fontSize = 0.875 + (sizeRatio * 0.625);
          
          return `
            <a 
              href="/search?tag=${encodeURIComponent(tag.tag_name)}"
              class="inline-flex items-center gap-1 rounded-full bg-primary-50 px-3 py-1 font-medium text-primary-700 hover:bg-primary-100 transition-colors"
              style="font-size: ${fontSize}rem;"
            >
              ${escapeHtml(tag.tag_name)}
              <span class="text-xs opacity-75">${tag.tool_count}</span>
            </a>
          `;
        }).join('');
      } else {
        container.innerHTML = '<div class="text-sm text-gray-500">No tags yet. Be the first to add one!</div>';
      }
    } catch (error) {
      console.error('Error loading popular tags:', error);
      container.innerHTML = '<div class="text-sm text-gray-500">Failed to load tags</div>';
    }
  }

  function escapeHtml(text: string): string {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }

  // Wait for Supabase to be ready
  if (window.__supabaseReady) {
    loadPopularTags();
  } else {
    window.addEventListener('supabase-ready', loadPopularTags);
  }
</script>
