---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import ToolCard from '../components/ToolCard.astro';
import SearchBar from '../components/SearchBar.astro';
import TrendingTools from '../components/TrendingTools.astro';
import Leaderboard from '../components/Leaderboard.astro';
import { getAllTools, getFeaturedTools, categories } from '../lib/tools';
import { getLangFromUrl, useTranslations } from '../lib/i18n';
import { getSkillsRanking } from '../lib/skills-ranking';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const tools = getAllTools();
const featuredTools = getFeaturedTools();

// Get top 6 skills
let topSkills = [];
try {
  const allSkills = await getSkillsRanking();
  topSkills = allSkills.slice(0, 6);
} catch (e) {
  console.error('Error loading skills:', e);
}

// Schema.org structured data
const schemaData = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "AI Tools Hub",
  "description": t('hero.description'),
  "url": "https://ai-tools-aggregator-seven.vercel.app",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://ai-tools-aggregator-seven.vercel.app/search?q={search_term_string}",
    "query-input": "required name=search_term_string"
  },
  "publisher": {
    "@type": "Organization",
    "name": "AI Tools Hub",
    "url": "https://ai-tools-aggregator-seven.vercel.app"
  }
};
