---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import ReviewSection from '../../../components/ReviewSection.astro';
import ReviewEditModal from '../../../components/ReviewEditModal.astro';
import ReportModal from '../../../components/ReportModal.astro';
import LeadGenWidget from '../../../components/LeadGenWidget.astro';
import TagInput from "../../../components/TagInput.astro";
import FavoriteButton from "../../../components/FavoriteButton.astro";

import { getAllTools, getToolById } from '../../../lib/tools';
import { useTranslations } from '../../../lib/i18n';

const { slug } = Astro.params;
const lang = 'ja'; // Fixed to Japanese
const t = useTranslations(lang);

// Get tool from static data
const tool = getToolById(slug as string);

if (!tool) {
  return Astro.redirect('/404');
}

// Determine if we should show the lead gen widget
const showLeadGen = tool.pricing === 'paid' || tool.pricing === 'freemium';

// Schema.org structured data
const schemaData = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": tool.name,
  "description": tool.description,
  "applicationCategory": "BusinessApplication",
  "operatingSystem": "Web",
  "offers": {
    "@type": "Offer",
    "price": tool.pricing === 'free' ? "0" : tool.pricing === 'freemium' ? "0" : "varies",
    "priceCurrency": "USD"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.5",
    "reviewCount": "0"
  }
};
---

<Layout title={`${tool.name} - ${tool.category} | AI Tools Aggregator`} description={tool.description}>
  <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />
  <Header />
  
  <main class="mx-auto max-w-7xl px-4 py-8">
    <!-- Tool Header -->
    <div class="mb-8 flex flex-col gap-6 lg:flex-row lg:items-start">
      <div class="flex-1">
        <div class="mb-4 flex items-start gap-4">
          <img
            src={tool.logo}
            alt={tool.name}
            class="h-16 w-16 rounded-lg object-cover"
          />
          <div class="flex-1">
            <h1 class="text-3xl font-bold">{tool.name}</h1>
            <div class="mt-2 flex flex-wrap gap-2">
              <span class="rounded-full bg-blue-100 px-3 py-1 text-sm font-medium text-blue-800">
                {tool.category}
              </span>
              <span class="rounded-full bg-green-100 px-3 py-1 text-sm font-medium text-green-800">
                {tool.pricing}
              </span>
            </div>
          </div>
          <div class="flex gap-2">
            <FavoriteButton toolId={tool.id} />
          </div>
        </div>
      </div>

      <div class="lg:w-80">
        <a
          href={tool.url}
          target="_blank"
          rel="noopener noreferrer"
          class="block w-full rounded-lg bg-blue-600 px-6 py-3 text-center font-semibold text-white hover:bg-blue-700"
        >
          {t('tool.visitWebsite')}
        </a>
      </div>
    </div>

    <!-- Description -->
    <div class="mb-8">
      <h2 class="mb-4 text-2xl font-bold">{t('tool.description')}</h2>
      <p class="text-lg text-gray-700">{tool.description}</p>
    </div>

    <!-- Lead Generation Widget -->
    {showLeadGen && (
      <div class="mb-8">
        <LeadGenWidget 
          toolId={tool.id}
          toolName={tool.name}
        />
      </div>
    )}

    <!-- Details -->
    <div class="mb-8 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <div class="rounded-lg border border-gray-200 bg-white p-6">
        <h3 class="mb-2 text-sm font-semibold text-gray-500">{t('tool.category')}</h3>
        <p class="text-lg font-medium">{tool.category}</p>
      </div>
      <div class="rounded-lg border border-gray-200 bg-white p-6">
        <h3 class="mb-2 text-sm font-semibold text-gray-500">{t('tool.pricing')}</h3>
        <p class="text-lg font-medium capitalize">{tool.pricing}</p>
      </div>
      {tool.verified && (
        <div class="rounded-lg border border-gray-200 bg-white p-6">
          <h3 class="mb-2 text-sm font-semibold text-gray-500">{t('tool.status')}</h3>
          <div class="flex items-center gap-2">
            <span class="text-lg font-medium">{t('tool.verified')}</span>
            <svg class="h-5 w-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          </div>
        </div>
      )}
    </div>

    <!-- Tags -->
    <div class="mb-8">
      <TagInput toolId={tool.id} />
    </div>

    <!-- Reviews -->
    <ReviewSection toolId={tool.id} />

    <!-- Modals -->
    <ReviewEditModal />
    <ReportModal />
  </main>
</Layout>
