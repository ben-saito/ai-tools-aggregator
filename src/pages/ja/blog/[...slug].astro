        <div class="bg-white rounded-lg shadow-md p-8 mb-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">関連記事</h3>
          <div class="grid gap-6 md:grid-cols-3">
            {relatedPosts.map((relatedPost) => (
              <a 
                href={`/ja/blog/${relatedPost.slug}`}
                class="group block bg-gray-50 rounded-lg p-6 hover:bg-blue-50 hover:shadow-md transition-all"
              >
