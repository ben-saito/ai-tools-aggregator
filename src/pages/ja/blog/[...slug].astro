        {post.data.featured && (
          <div class="inline-block bg-blue-600 text-white text-xs font-bold px-3 py-1 rounded mb-4">
            注目
          </div>
        )}
        
        <div class="text-sm text-blue-600 font-semibold mb-2">
          {post.data.category}
        </div>

        <h1 class="text-4xl font-bold text-gray-900 mb-4">
          {post.data.title}
        </h1>

        <p class="text-xl text-gray-600 mb-6">
          {post.data.description}
        </p>

        <div class="flex items-center justify-between text-sm text-gray-500 pb-6 border-b border-gray-200">
          <div class="flex items-center gap-4">
            <span class="font-medium">投稿者: {post.data.author}</span>
            <time datetime={post.data.publishedAt}>
              {formattedDate}
            </time>
          </div>
        </div>

        <!-- Tags -->
        <div class="mt-6 flex flex-wrap gap-2">
          {post.data.tags.map((tag) => (
            <span class="inline-block bg-gray-100 text-gray-700 text-sm px-3 py-1 rounded">
              {tag}
            </span>
          ))}
        </div>
      </header>

      <!-- Article Content -->
      <div class="bg-white rounded-lg shadow-md p-8 mb-8">
        <div class="prose prose-lg max-w-none
