        <div class="bg-white rounded-lg shadow-md p-8 mb-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">最新記事</h3>
          <div class="grid gap-6 md:grid-cols-3">
            {latestPosts.map((latestPost) => (
              <a 
                href={`/ja/blog/${latestPost.slug}`}
                class="group block bg-gray-50 rounded-lg p-6 hover:bg-green-50 hover:shadow-md transition-all"
              >
                <div class="flex items-center gap-2 mb-2">
