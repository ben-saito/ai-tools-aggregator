---
import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
// import Header from '../../../components/Header.astro';
// import SEO from '../../../components/SEO.astro';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog', ({ data }) => {
    return data.lang === 'ja';
  });
  return blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;

// Guard against undefined post
if (!post) {
  return Astro.redirect('/ja/blog');
}

const { Content } = await post.render();

const formattedDate = new Date(post.data.publishedAt).toLocaleDateString('ja-JP', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// 全記事を取得
const allPosts = await getCollection('blog', ({ data }) => {
  return data.lang === 'ja';
});

// 現在の記事を除外した記事リスト
const otherPosts = allPosts.filter(p => p.slug !== post.slug);

// 1. 関連記事を取得（同じカテゴリまたは共通タグ）
const relatedPosts = otherPosts
  .map(p => {
    // 関連性スコアを計算
    let score = 0;
    if (p.data.category === post.data.category) score += 3; // 同じカテゴリ
    const sharedTags = p.data.tags.filter(tag => post.data.tags.includes(tag));
    score += sharedTags.length; // 共通タグ
    return { post: p, score };
  })
  .filter(({ score }) => score > 0) // 関連性のある記事のみ
  .sort((a, b) => b.score - a.score) // スコア順にソート
  .slice(0, 3) // TOP 3
  .map(({ post }) => post);

// 2. 人気記事を取得（featuredフラグがtrueの記事）
const popularPosts = otherPosts
  .filter(p => p.data.featured === true)
  .sort((a, b) => new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime())
  .slice(0, 3);

// 3. 最新記事を取得
const latestPosts = otherPosts
  .sort((a, b) => new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime())
  .slice(0, 3);
