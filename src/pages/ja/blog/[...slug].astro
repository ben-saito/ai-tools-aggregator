---
import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import SEO from '../../../components/SEO.astro';

export const prerender = true;

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog', ({ data }) => {
    return data.lang === 'ja';
  });
  return blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const formattedDate = new Date(post.data.publishedAt).toLocaleDateString('ja-JP', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// 関連記事を取得（同じカテゴリまたは共通タグ）
const allPosts = await getCollection('blog', ({ data }) => {
  return data.lang === 'ja';
});

const relatedPosts = allPosts
  .filter(p => p.slug !== post.slug) // 現在の記事を除外
  .map(p => {
    // 関連性スコアを計算
    let score = 0;
    if (p.data.category === post.data.category) score += 3; // 同じカテゴリ
    const sharedTags = p.data.tags.filter(tag => post.data.tags.includes(tag));
    score += sharedTags.length; // 共通タグ
    return { post: p, score };
  })
  .filter(({ score }) => score > 0) // 関連性のある記事のみ
  .sort((a, b) => b.score - a.score) // スコア順にソート
  .slice(0, 3) // TOP 3
  .map(({ post }) => post);
---

<SEO
  title={`${post.data.title} - AI Tools Hub`}
  description={post.data.description}
  keywords={post.data.seo?.keywords || post.data.tags?.join(', ')}
  ogImage={post.data.seo?.ogImage || '/og-image-blog.png'}
  article={{
    publishedTime: post.data.publishedAt,
    author: post.data.author,
    tags: post.data.tags,
  }}
/>

<Layout title={post.data.title}>
  <Header />
  <div class="min-h-screen bg-[var(--color-bg-secondary)] py-12">
    <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Back to Blog -->
      <div class="mb-8">
        <a 
          href="/ja/blog"
          class="inline-flex items-center text-primary-600 hover:text-primary-800 transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          ブログに戻る
        </a>
      </div>

      <!-- Article Header -->
      <header class="bg-[var(--color-bg-elevated)] rounded-lg shadow-md p-8 mb-8">
        {post.data.featured && (
          <div class="inline-block bg-primary-600 text-white text-xs font-bold px-3 py-1 rounded mb-4">
            注目
          </div>
        )}
        
        <div class="text-sm text-primary-600 font-semibold mb-2">
          {post.data.category}
        </div>

        <h1 class="text-4xl font-bold text-[var(--color-text-primary)] mb-4">
          {post.data.title}
        </h1>

        <p class="text-xl text-[var(--color-text-secondary)] mb-6">
          {post.data.description}
        </p>

        <div class="flex items-center justify-between text-sm text-[var(--color-text-tertiary)] pb-6 border-b border-[var(--color-border-primary)]">
          <div class="flex items-center gap-4">
            <span class="font-medium">投稿者: {post.data.author}</span>
            <time datetime={post.data.publishedAt}>
              {formattedDate}
            </time>
          </div>
        </div>

        <!-- Tags -->
        <div class="mt-6 flex flex-wrap gap-2">
          {post.data.tags.map((tag) => (
            <span class="inline-block bg-[var(--color-bg-tertiary)] text-[var(--color-text-secondary)] text-sm px-3 py-1 rounded">
              {tag}
            </span>
          ))}
        </div>
      </header>

      <!-- Article Content -->
      <div class="bg-[var(--color-bg-elevated)] rounded-lg shadow-md p-8 mb-8">
        <div class="prose-blog max-w-none">
          <Content />
        </div>
      </div>

      <!-- Share Section -->
      <div class="bg-[var(--color-bg-elevated)] rounded-lg shadow-md p-8 mb-8">
        <h3 class="text-xl font-bold mb-4">この記事をシェア</h3>
        <div class="flex gap-4">
          <a 
            href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(`https://ai-tools-aggregator-seven.vercel.app/ja/blog/${post.slug}`)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-4 py-2 bg-[#1DA1F2] text-white rounded-lg hover:opacity-90 transition-opacity"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
            </svg>
            Twitter
          </a>
          
          <a 
            href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(`https://ai-tools-aggregator-seven.vercel.app/ja/blog/${post.slug}`)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-4 py-2 bg-[#1877F2] text-white rounded-lg hover:opacity-90 transition-opacity"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
            Facebook
          </a>
        </div>
      </div>

      <!-- Related Articles -->
      {relatedPosts.length > 0 && (
        <div class="bg-[var(--color-bg-elevated)] rounded-lg shadow-md p-8 mb-8">
          <h3 class="text-2xl font-bold text-[var(--color-text-primary)] mb-6">関連記事</h3>
          <div class="grid gap-6 md:grid-cols-3">
            {relatedPosts.map((relatedPost) => (
              <a 
                href={`/ja/blog/${relatedPost.slug}`}
                class="group block bg-[var(--color-bg-secondary)] rounded-lg p-6 hover:bg-primary-50 hover:shadow-md transition-all"
              >
                <div class="text-sm text-primary-600 font-semibold mb-2">
                  {relatedPost.data.category}
                </div>
                <h4 class="text-lg font-semibold text-[var(--color-text-primary)] mb-2 group-hover:text-primary-700 transition-colors line-clamp-2">
                  {relatedPost.data.title}
                </h4>
                <p class="text-sm text-[var(--color-text-secondary)] line-clamp-2">
                  {relatedPost.data.description}
                </p>
                <div class="mt-4 text-sm text-primary-600 font-medium group-hover:underline">
                  続きを読む →
                </div>
              </a>
            ))}
          </div>
        </div>
      )}

      <!-- CTA - Browse More Tools -->
      <div class="bg-gradient-to-r from-primary-50 to-purple-50 rounded-lg shadow-md p-8 mb-8">
        <h3 class="text-2xl font-bold text-[var(--color-text-primary)] mb-2">他のAIツールも探す</h3>
        <p class="text-[var(--color-text-secondary)] mb-4">生産性、創造性、イノベーションのための60以上のAIツールの厳選ディレクトリをご覧ください。</p>
        <div class="flex gap-4">
          <a 
            href="/ja/"
            class="inline-flex items-center gap-2 px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors"
          >
            AIツールを探す →
          </a>
          <a 
            href="/ja/blog"
            class="inline-flex items-center gap-2 px-6 py-3 bg-[var(--color-bg-elevated)] text-primary-600 font-semibold rounded-lg hover:bg-[var(--color-bg-secondary)] transition-colors border-2 border-primary-600"
          >
            他の記事を読む
          </a>
        </div>
      </div>
    </article>
  </div>
</Layout>
