---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import { getCollection } from 'astro:content';

const blogPosts = await getCollection('blog', ({ data }) => {
  return data.lang === 'ja';
});
const sortedPosts = blogPosts.sort((a, b) => 
  new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime()
);

// 人気記事セクション用のfeatured記事を取得
const featuredPosts = blogPosts
  .filter(post => post.data.featured === true)
  .sort((a, b) => new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime())
  .slice(0, 3);

// カテゴリ一覧
const categories = [...new Set(blogPosts.map(post => post.data.category))].sort();

// 記事データをJSON化（クライアントサイド検索用）
const postsData = sortedPosts.map(post => ({
  slug: post.slug,
  title: post.data.title,
  description: post.data.description,
  category: post.data.category,
  author: post.data.author,
  publishedAt: post.data.publishedAt,
  tags: post.data.tags,
  featured: post.data.featured,
}));
---

<Layout title="ブログ - AI Tools Hub">
  <Header />
  <div class="min-h-screen bg-[var(--color-bg-secondary)] py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-[var(--color-text-primary)] mb-4">
          ブログ
        </h1>
        <p class="text-xl text-[var(--color-text-secondary)] max-w-3xl mx-auto">
          AIツールの使い方に関するガイド、チュートリアル、洞察
        </p>
      </div>

      <!-- 検索バー -->
      <div class="mb-8">
        <div class="relative max-w-xl mx-auto">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-[var(--color-text-tertiary)]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
            </svg>
          </div>
          <input
            id="search-input"
            type="text"
            placeholder="記事を検索..."
            class="w-full pl-10 pr-4 py-3 bg-[var(--color-bg-elevated)] border border-[var(--color-border-primary)] rounded-xl text-[var(--color-text-primary)] placeholder-[var(--color-text-tertiary)] focus:outline-none focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all"
          />
        </div>
      </div>

      <!-- カテゴリフィルター -->
      {categories.length > 0 && (
        <div class="mb-10">
          <div class="flex flex-wrap gap-2 justify-center">
            <button
              class="category-btn active px-4 py-2 rounded-lg text-sm font-medium transition-all border"
              data-category="all"
            >
              すべて
            </button>
            {categories.map((category) => (
              <button
                class="category-btn px-4 py-2 rounded-lg text-sm font-medium transition-all border"
                data-category={category}
              >
                {category}
              </button>
            ))}
          </div>
        </div>
      )}

      <!-- 人気記事 -->
      {featuredPosts.length > 0 && (
        <div id="featured-section" class="mb-12">
          <h2 class="text-2xl font-bold text-[var(--color-text-primary)] mb-6">人気記事</h2>
          <div class="grid gap-6 md:grid-cols-3">
            {featuredPosts.map((post) => (
              <a 
                href={`/ja/blog/${post.slug}`}
                class="group block bg-gradient-to-br from-primary-50 to-white border border-primary-100 rounded-lg p-6 hover:shadow-lg transition-all"
              >
                <div class="text-xs text-primary-600 font-bold mb-2">
                  ⭐ {post.data.category}
                </div>
                <h3 class="text-lg font-bold text-[var(--color-text-primary)] mb-2 group-hover:text-primary-600 transition-colors line-clamp-2">
                  {post.data.title}
                </h3>
                <p class="text-sm text-[var(--color-text-secondary)] line-clamp-2 mb-3">
                  {post.data.description}
                </p>
                <div class="text-xs text-[var(--color-text-tertiary)]">
                  {new Date(post.data.publishedAt).toLocaleDateString('ja-JP', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                  })}
                </div>
              </a>
            ))}
          </div>
        </div>
      )}

      <!-- 全記事ヘッダー & 件数 -->
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-[var(--color-text-primary)]">すべての記事</h2>
        <span id="results-count" class="text-sm text-[var(--color-text-tertiary)]">{sortedPosts.length}件</span>
      </div>
      
      <!-- Blog Posts Grid -->
      <div id="posts-grid" class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {sortedPosts.map((post) => (
          <article
            class="blog-post-card bg-[var(--color-bg-elevated)] rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow"
            data-title={post.data.title.toLowerCase()}
            data-description={(post.data.description || '').toLowerCase()}
            data-category={post.data.category}
            data-tags={(post.data.tags || []).join(' ').toLowerCase()}
          >
            {post.data.featured && (
              <div class="bg-primary-600 text-white text-xs font-bold px-3 py-1 inline-block">
                注目
              </div>
            )}
            <div class="p-6">
              <div class="text-sm text-primary-600 font-semibold mb-2">
                {post.data.category}
              </div>
              <h2 class="text-2xl font-bold text-[var(--color-text-primary)] mb-3 hover:text-primary-600 transition-colors">
                <a href={`/ja/blog/${post.slug}`}>
                  {post.data.title}
                </a>
              </h2>
              <p class="text-[var(--color-text-secondary)] mb-4 line-clamp-3">
                {post.data.description}
              </p>
              <div class="flex items-center justify-between text-sm text-[var(--color-text-tertiary)]">
                <span>{post.data.author}</span>
                <time datetime={post.data.publishedAt}>
                  {new Date(post.data.publishedAt).toLocaleDateString('ja-JP', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
              </div>
              <div class="mt-4 flex flex-wrap gap-2">
                {post.data.tags.slice(0, 3).map((tag) => (
                  <span class="inline-block bg-[var(--color-bg-tertiary)] text-[var(--color-text-secondary)] text-xs px-2 py-1 rounded">
                    {tag}
                  </span>
                ))}
              </div>
              <a 
                href={`/ja/blog/${post.slug}`}
                class="inline-block mt-4 text-primary-600 font-semibold hover:text-primary-800 transition-colors"
              >
                続きを読む →
              </a>
            </div>
          </article>
        ))}
      </div>

      <!-- Empty State -->
      <div id="empty-state" class="hidden text-center py-16">
        <svg class="mx-auto h-12 w-12 text-[var(--color-text-tertiary)] mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <p class="text-[var(--color-text-tertiary)] text-lg mb-2">該当する記事が見つかりませんでした</p>
        <button id="clear-search" class="text-primary-600 hover:text-primary-800 text-sm font-medium">検索をリセット</button>
      </div>
    </div>
  </div>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .category-btn {
    background-color: var(--color-bg-elevated);
    border-color: var(--color-border-primary);
    color: var(--color-text-secondary);
  }
  .category-btn:hover {
    border-color: #6366f1;
    color: #6366f1;
  }
  .category-btn.active {
    background-color: #6366f1;
    border-color: #6366f1;
    color: white;
  }
</style>

<script is:inline>
  (function() {
    var searchInput = document.getElementById('search-input');
    var categoryBtns = document.querySelectorAll('.category-btn');
    var cards = document.querySelectorAll('.blog-post-card');
    var emptyState = document.getElementById('empty-state');
    var resultsCount = document.getElementById('results-count');
    var featuredSection = document.getElementById('featured-section');
    var clearSearch = document.getElementById('clear-search');

    var currentQuery = '';
    var currentCategory = 'all';

    function filterPosts() {
      var query = currentQuery.trim().toLowerCase();
      var visibleCount = 0;

      cards.forEach(function(card) {
        var title = card.getAttribute('data-title') || '';
        var description = card.getAttribute('data-description') || '';
        var category = card.getAttribute('data-category') || '';
        var tags = card.getAttribute('data-tags') || '';

        var matchesQuery = !query ||
          title.indexOf(query) !== -1 ||
          description.indexOf(query) !== -1 ||
          tags.indexOf(query) !== -1;

        var matchesCategory = currentCategory === 'all' || category === currentCategory;

        if (matchesQuery && matchesCategory) {
          card.style.display = '';
          visibleCount++;
        } else {
          card.style.display = 'none';
        }
      });

      if (resultsCount) resultsCount.textContent = visibleCount + '件';

      if (emptyState) {
        if (visibleCount === 0) {
          emptyState.classList.remove('hidden');
        } else {
          emptyState.classList.add('hidden');
        }
      }

      if (featuredSection) {
        featuredSection.style.display = (query || currentCategory !== 'all') ? 'none' : '';
      }
    }

    if (searchInput) {
      searchInput.addEventListener('input', function(e) {
        currentQuery = e.target.value;
        filterPosts();
      });
    }

    categoryBtns.forEach(function(btn) {
      btn.addEventListener('click', function() {
        categoryBtns.forEach(function(b) { b.classList.remove('active'); });
        btn.classList.add('active');
        currentCategory = btn.getAttribute('data-category') || 'all';
        filterPosts();
      });
    });

    if (clearSearch) {
      clearSearch.addEventListener('click', function() {
        if (searchInput) searchInput.value = '';
        currentQuery = '';
        currentCategory = 'all';
        categoryBtns.forEach(function(b) { b.classList.remove('active'); });
        if (categoryBtns[0]) categoryBtns[0].classList.add('active');
        filterPosts();
      });
    }

    var urlParams = new URLSearchParams(window.location.search);
    var categoryParam = urlParams.get('category');
    if (categoryParam) {
      currentCategory = categoryParam;
      categoryBtns.forEach(function(btn) {
        btn.classList.remove('active');
        if (btn.getAttribute('data-category') === categoryParam) {
          btn.classList.add('active');
        }
      });
      filterPosts();
    }
  })();
</script>
