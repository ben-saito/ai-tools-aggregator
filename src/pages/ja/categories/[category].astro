---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import ToolCard from '../../../components/ToolCard.astro';
import { useTranslations } from '../../../lib/i18n';
import { categories, getToolsByCategory } from '../../../lib/tools';

const { category } = Astro.params;
const lang = 'ja';
const t = useTranslations(lang);

// Get category details from static data
const categoryData = categories.find((cat) => cat.slug === category);

if (!categoryData) {
  return Astro.redirect('/ja');
}

// Get tools in this category from static data
const tools = getToolsByCategory(categoryData.slug);

// Japanese category name mapping
const categoryNamesJa: Record<string, string> = {
  'text-generation': 'テキスト生成',
  'image-generation': '画像生成',
  'video-generation': '動画生成',
  'audio-music': 'オーディオ・音楽',
  'code-development': 'コード開発',
  'marketing-sales': 'マーケティング・営業',
  'productivity': '生産性向上',
  'research-education': 'リサーチ・教育',
  'design-creative': 'デザイン・クリエイティブ',
  'data-analytics': 'データ・分析',
};

const categoryDescriptionsJa: Record<string, string> = {
  'text-generation': 'AI搭載のライティングアシスタント、チャットボット、コンテンツジェネレーター',
  'image-generation': 'AIで美しい画像、アート、グラフィックを作成',
  'video-generation': 'AI技術を使った動画の生成・編集',
  'audio-music': 'AI音楽制作、音声合成、オーディオ編集ツール',
  'code-development': 'AIコーディングアシスタント・開発ツール',
  'marketing-sales': 'AI自動化でマーケティングと営業を強化',
  'productivity': 'AI搭載の生産性ツールでワークフローを改善',
  'research-education': '学習・研究・知識発見のためのAIツール',
  'design-creative': 'プロフェッショナル向けAIデザイン・クリエイティブツール',
  'data-analytics': 'AIアナリティクスツールでデータをインサイトに変換',
};

const jaName = categoryNamesJa[categoryData.slug] || categoryData.name;
const jaDescription = categoryDescriptionsJa[categoryData.slug] || categoryData.description;
---

<Layout title={`${jaName} - AI Tools Hub`}>
  <Header />
  <main class="min-h-screen bg-[var(--color-bg-secondary)]">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12">
      <!-- パンくずリスト -->
      <nav class="mb-8 text-sm">
        <a href="/ja" class="text-primary-600 hover:text-primary-800 transition-colors">ホーム</a>
        <span class="mx-2 text-[var(--color-text-tertiary)]">&rsaquo;</span>
        <span class="text-[var(--color-text-secondary)]">{jaName}</span>
      </nav>

      <!-- ヘッダー -->
      <div class="mb-10">
        <div class="flex items-center gap-4 mb-4">
          <span class="text-5xl">{categoryData.icon}</span>
          <div>
            <h1 class="text-4xl font-bold text-[var(--color-text-primary)]">{jaName}</h1>
            <p class="mt-1 text-[var(--color-text-secondary)]">{tools.length} ツール</p>
          </div>
        </div>
        {jaDescription && (
          <p class="text-lg text-[var(--color-text-secondary)] max-w-3xl">
            {jaDescription}
          </p>
        )}
      </div>

      <!-- ツールグリッド -->
      {tools.length > 0 ? (
        <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
          {tools.map((tool) => (
            <ToolCard {...tool} />
          ))}
        </div>
      ) : (
        <div class="text-center py-16 bg-[var(--color-bg-elevated)] rounded-xl">
          <p class="text-[var(--color-text-secondary)] text-lg">
            このカテゴリにはまだツールがありません。
          </p>
          <a href="/ja" class="mt-4 inline-block text-primary-600 font-semibold hover:text-primary-800">
            &larr; すべてのツールを見る
          </a>
        </div>
      )}

      <!-- 他のカテゴリ -->
      <div class="mt-16">
        <h2 class="mb-6 text-2xl font-bold text-[var(--color-text-primary)]">他のカテゴリ</h2>
        <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
          {categories.filter(c => c.slug !== category).map((cat) => {
            const catTools = getToolsByCategory(cat.slug);
            const catJaName = categoryNamesJa[cat.slug] || cat.name;
            return (
              <a
                href={`/ja/categories/${cat.slug}`}
                class="group rounded-xl border border-[var(--color-border-primary)] bg-[var(--color-bg-elevated)] p-4 transition-all duration-200 hover:-translate-y-0.5 hover:border-primary-500 hover:shadow-md"
              >
                <div class="flex items-center gap-3">
                  <span class="text-3xl">{cat.icon}</span>
                  <div>
                    <h3 class="font-semibold text-[var(--color-text-primary)] group-hover:text-primary-600 transition-colors">{catJaName}</h3>
                    <p class="text-sm text-[var(--color-text-tertiary)]">{catTools.length} ツール</p>
                  </div>
                </div>
              </a>
            );
          })}
        </div>
      </div>
    </div>
  </main>
</Layout>
