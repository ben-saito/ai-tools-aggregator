---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import SEO from '../../../components/SEO.astro';
import { getCollection } from 'astro:content';
import { languages, type Language, useTranslations } from '../../../lib/i18n';

export const prerender = true;

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang },
  }));
}

const { lang } = Astro.params as { lang: Language };
const t = useTranslations(lang);

const allBlogPosts = await getCollection('blog');
// Filter posts by language, fallback to 'en' if no lang-specific post exists
const blogPosts = allBlogPosts.filter(post => post.data.lang === lang);
const sortedPosts = blogPosts.sort((a, b) =>
  new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime()
);

// Featured posts for popular section
const featuredPosts = blogPosts
  .filter(post => post.data.featured === true)
  .sort((a, b) => new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime())
  .slice(0, 3);

// Category quick access
const categories = [...new Set(blogPosts.map(post => post.data.category))].slice(0, 6);
---

<SEO
  title={lang === 'ja' ? 'ブログ - AI Tools Hub | ガイド、チュートリアル、AIツールレビュー' : 'Blog - AI Tools Hub | Guides, Tutorials & AI Tool Reviews'}
  description={lang === 'ja' ? 'AIツールに関する包括的なガイドとチュートリアル。ChatGPT、Claude、Midjourneyなどのツールを使って生産性と創造性を高める方法を学びましょう。' : 'Comprehensive guides and tutorials about AI tools. Learn how to use ChatGPT, Claude, Midjourney, and other AI tools to boost productivity and creativity.'}
  keywords="AI tools blog, ChatGPT tutorials, AI tool guides, AI productivity tips, AI writing tools, AI coding tools, AI comparison"
  ogImage="/og-image-blog.png"
  lang={lang}
/>

<Layout title={t('blog.title') + ' - AI Tools Hub'}>
  <Header />
  <div class="min-h-screen bg-[var(--color-bg-secondary)] py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-[var(--color-text-primary)] mb-4">
          {t('blog.title')}
        </h1>
        <p class="text-xl text-[var(--color-text-secondary)] max-w-3xl mx-auto">
          {t('blog.subtitle')}
        </p>
      </div>

      <!-- Category Navigation -->
      {categories.length > 0 && (
        <div class="mb-12">
          <h2 class="text-lg font-semibold text-[var(--color-text-primary)] mb-4">
            {lang === 'ja' ? 'カテゴリから探す' : 'Browse by Category'}
          </h2>
          <div class="flex flex-wrap gap-3">
            {categories.map((category) => (
              <a
                href={`/${lang}/blog?category=${encodeURIComponent(category)}`}
                class="inline-block px-4 py-2 bg-[var(--color-bg-elevated)] border border-[var(--color-border-primary)] rounded-lg hover:border-primary-500 hover:text-primary-600 transition-colors text-sm font-medium"
              >
                {category}
              </a>
            ))}
          </div>
        </div>
      )}

      <!-- Featured/Popular Posts -->
      {featuredPosts.length > 0 && (
        <div class="mb-12">
          <h2 class="text-2xl font-bold text-[var(--color-text-primary)] mb-6">
            {lang === 'ja' ? '人気記事' : 'Popular Articles'}
          </h2>
          <div class="grid gap-6 md:grid-cols-3">
            {featuredPosts.map((post) => (
              <a
                href={`/${lang}/blog/${post.slug}`}
                class="group block bg-gradient-to-br from-primary-50 to-white border border-primary-100 rounded-lg p-6 hover:shadow-lg transition-all"
              >
                <div class="text-xs text-primary-600 font-bold mb-2">
                  {post.data.category}
                </div>
                <h3 class="text-lg font-bold text-[var(--color-text-primary)] mb-2 group-hover:text-primary-600 transition-colors line-clamp-2">
                  {post.data.title}
                </h3>
                <p class="text-sm text-[var(--color-text-secondary)] line-clamp-2 mb-3">
                  {post.data.description}
                </p>
                <div class="text-xs text-[var(--color-text-tertiary)]">
                  {new Date(post.data.publishedAt).toLocaleDateString(lang === 'ja' ? 'ja-JP' : 'en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                  })}
                </div>
              </a>
            ))}
          </div>
        </div>
      )}

      <!-- All Articles -->
      <h2 class="text-2xl font-bold text-[var(--color-text-primary)] mb-6">
        {lang === 'ja' ? 'すべての記事' : 'All Articles'}
      </h2>

      <!-- Blog Posts Grid -->
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {sortedPosts.map((post) => (
          <article class="bg-[var(--color-bg-elevated)] rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow">
            <!-- Featured Badge -->
            {post.data.featured && (
              <div class="bg-primary-600 text-white text-xs font-bold px-3 py-1 inline-block">
                {lang === 'ja' ? '注目' : 'FEATURED'}
              </div>
            )}

            <div class="p-6">
              <!-- Category -->
              <div class="text-sm text-primary-600 font-semibold mb-2">
                {post.data.category}
              </div>

              <!-- Title -->
              <h2 class="text-2xl font-bold text-[var(--color-text-primary)] mb-3 hover:text-primary-600 transition-colors">
                <a href={`/${lang}/blog/${post.slug}`}>
                  {post.data.title}
                </a>
              </h2>

              <!-- Description -->
              <p class="text-[var(--color-text-secondary)] mb-4 line-clamp-3">
                {post.data.description}
              </p>

              <!-- Meta -->
              <div class="flex items-center justify-between text-sm text-[var(--color-text-tertiary)]">
                <span>{post.data.author}</span>
                <time datetime={post.data.publishedAt}>
                  {new Date(post.data.publishedAt).toLocaleDateString(lang === 'ja' ? 'ja-JP' : 'en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
              </div>

              <!-- Tags -->
              <div class="mt-4 flex flex-wrap gap-2">
                {post.data.tags.slice(0, 3).map((tag) => (
                  <span class="inline-block bg-[var(--color-bg-secondary)] text-[var(--color-text-secondary)] text-xs px-2 py-1 rounded">
                    {tag}
                  </span>
                ))}
              </div>

              <!-- Read More -->
              <a 
                href={`/${lang}/blog/${post.slug}`}
                class="inline-block mt-4 text-primary-600 font-semibold hover:text-primary-800 transition-colors"
              >
                {t('blog.readMore')} →
              </a>
            </div>
          </article>
        ))}
      </div>

      <!-- Empty State -->
      {sortedPosts.length === 0 && (
        <div class="text-center py-12">
          <p class="text-[var(--color-text-tertiary)] text-lg">
            {lang === 'ja' ? 'まだブログ記事がありません。近日公開予定です！' : 'No blog posts yet. Check back soon!'}
          </p>
        </div>
      )}
    </div>
  </div>
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
