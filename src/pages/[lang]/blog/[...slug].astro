---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import SEO from '../../../components/SEO.astro';
import { getCollection } from 'astro:content';
import { languages, type Language, useTranslations } from '../../../lib/i18n';

export const prerender = true;

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog');
  const paths = [];
  
  for (const lang of Object.keys(languages)) {
    for (const post of blogPosts) {
      paths.push({
        params: { lang, slug: post.slug },
        props: { post },
      });
    }
  }
  
  return paths;
}

const { lang } = Astro.params as { lang: Language };
const { post } = Astro.props;
const { Content } = await post.render();
const { title, description, publishedAt, author, category, tags, seo } = post.data;

const t = useTranslations(lang);
---

<SEO
  title={`${title} - AI Tools Hub`}
  description={description}
  keywords={seo?.keywords || tags.join(', ')}
  ogImage={seo?.ogImage || '/og-image-blog.png'}
  ogType="article"
  articlePublishedTime={publishedAt}
  articleAuthor={author}
  articleSection={category}
  articleTags={tags}
  lang={lang}
/>

<Layout
  title={`${title} - AI Tools Hub`}
  description={description}
>
  <Header />
  <article class="min-h-screen bg-[var(--color-bg-elevated)]">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Breadcrumbs -->
      <nav class="mb-8 text-sm">
        <a href={`/${lang}`} class="text-primary-600 hover:text-primary-800">{t('nav.home')}</a>
        <span class="mx-2 text-[var(--color-text-tertiary)]">›</span>
        <a href={`/${lang}/blog`} class="text-primary-600 hover:text-primary-800">{t('nav.blog')}</a>
        <span class="mx-2 text-[var(--color-text-tertiary)]">›</span>
        <span class="text-[var(--color-text-secondary)]">{category}</span>
      </nav>

      <!-- Header -->
      <header class="mb-12">
        <!-- Category -->
        <div class="text-sm text-primary-600 font-semibold mb-4">
          {category}
        </div>

        <!-- Title -->
        <h1 class="text-4xl md:text-5xl font-bold text-[var(--color-text-primary)] mb-6">
          {title}
        </h1>

        <!-- Meta -->
        <div class="flex items-center gap-6 text-[var(--color-text-secondary)] mb-6">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <span>{author}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <time datetime={publishedAt}>
              {new Date(publishedAt).toLocaleDateString(lang === 'ja' ? 'ja-JP' : 'en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
          </div>
        </div>

        <!-- Tags -->
        <div class="flex flex-wrap gap-2 mb-8">
          {tags.map((tag: string) => (
            <span class="inline-block bg-primary-50 text-primary-700 text-sm px-3 py-1 rounded-full">
              #{tag}
            </span>
          ))}
        </div>

        <!-- Description -->
        <p class="text-xl text-[var(--color-text-secondary)] leading-relaxed">
          {description}
        </p>
      </header>

      <!-- Content -->
      <div class="prose-blog max-w-none">
        <Content />
      </div>

      <!-- Footer -->
      <footer class="mt-16 pt-8 border-t border-[var(--color-border-primary)]">
        <!-- Share -->
        <div class="mb-8">
          <h3 class="text-lg font-semibold text-[var(--color-text-primary)] mb-4">{t('blog.shareArticle')}</h3>
          <div class="flex gap-4">
            <a 
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-4 py-2 bg-[#1DA1F2] text-white rounded-lg hover:opacity-90 transition-opacity"
            >
              Twitter
            </a>
            <a 
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-4 py-2 bg-[#0A66C2] text-white rounded-lg hover:opacity-90 transition-opacity"
            >
              LinkedIn
            </a>
          </div>
        </div>

        <!-- Back to Blog -->
        <a 
          href={`/${lang}/blog`}
          class="inline-flex items-center gap-2 text-primary-600 font-semibold hover:text-primary-800 transition-colors"
        >
          ← {t('blog.backToBlog')}
        </a>
      </footer>
    </div>
  </article>
</Layout>
