---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import SEO from '../../../components/SEO.astro';
import { getCollection } from 'astro:content';
import { languages, type Language, useTranslations } from '../../../lib/i18n';

export const prerender = true;

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog');
  const paths = [];
  
  for (const lang of Object.keys(languages)) {
    for (const post of blogPosts) {
      paths.push({
        params: { lang, slug: post.slug },
        props: { post },
      });
    }
  }
  
  return paths;
}

const { lang } = Astro.params as { lang: Language };
const { post } = Astro.props;
const { Content } = await post.render();
const { title, description, publishedAt, author, category, tags, seo } = post.data;

const t = useTranslations(lang);

// Get all posts for the same language
const allPosts = await getCollection('blog', ({ data }) => {
  return data.lang === lang;
});

// Filter out current post
const otherPosts = allPosts.filter(p => p.slug !== post.slug);

// 1. Get related posts (same category or shared tags)
const relatedPosts = otherPosts
  .map(p => {
    // Calculate relevance score
    let score = 0;
    if (p.data.category === category) score += 3; // Same category
    const sharedTags = p.data.tags.filter(tag => tags.includes(tag));
    score += sharedTags.length; // Shared tags
    return { post: p, score };
  })
  .filter(({ score }) => score > 0) // Only posts with some relevance
  .sort((a, b) => b.score - a.score) // Sort by relevance
  .slice(0, 3) // Top 3
  .map(({ post }) => post);

// 2. Get popular posts (featured articles)
const popularPosts = otherPosts
  .filter(p => p.data.featured === true)
  .sort((a, b) => new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime())
  .slice(0, 3);

// 3. Get latest posts
const latestPosts = otherPosts
  .sort((a, b) => new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime())
  .slice(0, 3);
---

<SEO
  title={`${title} - AI Tools Hub`}
  description={description}
  keywords={seo?.keywords || tags.join(', ')}
  ogImage={seo?.ogImage || '/og-image-blog.png'}
  ogType="article"
  articlePublishedTime={publishedAt}
  articleAuthor={author}
  articleSection={category}
  articleTags={tags}
  lang={lang}
/>

<Layout
  title={`${title} - AI Tools Hub`}
  description={description}
>
  <Header />
  <article class="min-h-screen bg-[var(--color-bg-elevated)]">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Breadcrumbs -->
      <nav class="mb-8 text-sm">
        <a href={`/${lang}`} class="text-primary-600 hover:text-primary-800">{t('nav.home')}</a>
        <span class="mx-2 text-[var(--color-text-tertiary)]">›</span>
        <a href={`/${lang}/blog`} class="text-primary-600 hover:text-primary-800">{t('nav.blog')}</a>
        <span class="mx-2 text-[var(--color-text-tertiary)]">›</span>
        <span class="text-[var(--color-text-secondary)]">{category}</span>
      </nav>

      <!-- Header -->
      <header class="mb-12">
        <!-- Category -->
        <div class="text-sm text-primary-600 font-semibold mb-4">
          {category}
        </div>

        <!-- Title -->
        <h1 class="text-4xl md:text-5xl font-bold text-[var(--color-text-primary)] mb-6">
          {title}
        </h1>

        <!-- Meta -->
        <div class="flex items-center gap-6 text-[var(--color-text-secondary)] mb-6">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <span>{author}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <time datetime={publishedAt}>
              {new Date(publishedAt).toLocaleDateString(lang === 'ja' ? 'ja-JP' : 'en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
          </div>
        </div>

        <!-- Tags -->
        <div class="flex flex-wrap gap-2 mb-8">
          {tags.map((tag: string) => (
            <span class="inline-block bg-primary-50 text-primary-700 text-sm px-3 py-1 rounded-full">
              #{tag}
            </span>
          ))}
        </div>

        <!-- Description -->
        <p class="text-xl text-[var(--color-text-secondary)] leading-relaxed">
          {description}
        </p>
      </header>

      <!-- Content -->
      <div class="prose-blog max-w-none">
        <Content />
      </div>

      <!-- Related Articles -->
      {relatedPosts.length > 0 && (
        <section class="mt-16 pt-8 border-t border-gray-200">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">{lang === 'ja' ? '関連記事' : 'Related Articles'}</h2>
          <div class="grid gap-6 md:grid-cols-3">
            {relatedPosts.map((relatedPost) => (
              <a 
                href={`/${lang}/blog/${relatedPost.slug}`}
                class="group block bg-gray-50 rounded-lg p-6 hover:bg-blue-50 hover:shadow-md transition-all"
              >
                <div class="text-sm text-blue-600 font-semibold mb-2">
                  {relatedPost.data.category}
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-blue-700 transition-colors line-clamp-2">
                  {relatedPost.data.title}
                </h3>
                <p class="text-sm text-gray-600 line-clamp-2">
                  {relatedPost.data.description}
                </p>
                <div class="mt-4 text-sm text-blue-600 font-medium group-hover:underline">
                  {lang === 'ja' ? '続きを読む →' : 'Read more →'}
                </div>
              </a>
            ))}
          </div>
        </section>
      )}

      <!-- Popular Articles -->
      {popularPosts.length > 0 && (
        <section class="mt-16 pt-8 border-t border-gray-200">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">{lang === 'ja' ? '人気記事' : 'Popular Articles'}</h2>
          <div class="grid gap-6 md:grid-cols-3">
            {popularPosts.map((popularPost) => (
              <a 
                href={`/${lang}/blog/${popularPost.slug}`}
                class="group block bg-gradient-to-br from-blue-50 to-purple-50 rounded-lg p-6 hover:shadow-lg transition-all"
              >
                <div class="flex items-center gap-2 mb-2">
                  <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                  <span class="text-sm text-blue-600 font-semibold">{popularPost.data.category}</span>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-blue-700 transition-colors line-clamp-2">
                  {popularPost.data.title}
                </h3>
                <p class="text-sm text-gray-600 line-clamp-2">
                  {popularPost.data.description}
                </p>
                <div class="mt-4 text-sm text-blue-600 font-medium group-hover:underline">
                  {lang === 'ja' ? '続きを読む →' : 'Read more →'}
                </div>
              </a>
            ))}
          </div>
        </section>
      )}

      <!-- Latest Articles -->
      {latestPosts.length > 0 && (
        <section class="mt-16 pt-8 border-t border-gray-200">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">{lang === 'ja' ? '最新記事' : 'Latest Articles'}</h2>
          <div class="grid gap-6 md:grid-cols-3">
            {latestPosts.map((latestPost) => (
              <a 
                href={`/${lang}/blog/${latestPost.slug}`}
                class="group block bg-gray-50 rounded-lg p-6 hover:bg-green-50 hover:shadow-md transition-all"
              >
                <div class="flex items-center gap-2 mb-2">
                  <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <span class="text-sm text-blue-600 font-semibold">{latestPost.data.category}</span>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-green-700 transition-colors line-clamp-2">
                  {latestPost.data.title}
                </h3>
                <p class="text-sm text-gray-600 line-clamp-2">
                  {latestPost.data.description}
                </p>
                <div class="mt-4 text-sm text-green-600 font-medium group-hover:underline">
                  {lang === 'ja' ? '続きを読む →' : 'Read more →'}
                </div>
              </a>
            ))}
          </div>
        </section>
      )}

      <!-- Footer -->
      <footer class="mt-16 pt-8 border-t border-[var(--color-border-primary)]">
        <!-- Share -->
        <div class="mb-8">
          <h3 class="text-lg font-semibold text-[var(--color-text-primary)] mb-4">{t('blog.shareArticle')}</h3>
          <div class="flex gap-4">
            <a 
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-4 py-2 bg-[#1DA1F2] text-white rounded-lg hover:opacity-90 transition-opacity"
            >
              Twitter
            </a>
            <a 
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-4 py-2 bg-[#0A66C2] text-white rounded-lg hover:opacity-90 transition-opacity"
            >
              LinkedIn
            </a>
          </div>
        </div>

        <!-- Back to Blog -->
        <a 
          href={`/${lang}/blog`}
          class="inline-flex items-center gap-2 text-primary-600 font-semibold hover:text-primary-800 transition-colors"
        >
          ← {t('blog.backToBlog')}
        </a>
      </footer>
    </div>
  </article>
</Layout>
