---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import SEO from '../../components/SEO.astro';
import { getCollection } from 'astro:content';

export const prerender = true;

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog', ({ data }) => {
    return data.lang === 'en' || data.lang === undefined;
  });
  return blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
const { title, description, publishedAt, author, category, tags, seo } = post.data;

// Get related posts (same category or shared tags)
const allPosts = await getCollection('blog', ({ data }) => {
  return data.lang === 'en' || data.lang === undefined;
});

const relatedPosts = allPosts
  .filter(p => p.slug !== post.slug) // Exclude current post
  .map(p => {
    // Calculate relevance score
    let score = 0;
    if (p.data.category === category) score += 3; // Same category
    const sharedTags = p.data.tags.filter(tag => tags.includes(tag));
    score += sharedTags.length; // Shared tags
    return { post: p, score };
  })
  .filter(({ score }) => score > 0) // Only posts with some relevance
  .sort((a, b) => b.score - a.score) // Sort by relevance
  .slice(0, 3) // Top 3
  .map(({ post }) => post);
---

<SEO
  title={`${title} - AI Tools Hub`}
  description={description}
  keywords={seo?.keywords || tags.join(', ')}
  ogImage={seo?.ogImage || '/og-image-blog.png'}
  ogType="article"
  articlePublishedTime={publishedAt}
  articleAuthor={author}
  articleSection={category}
  articleTags={tags}
/>

<Layout
  title={`${title} - AI Tools Hub`}
  description={description}
>
  <Header />
  <article class="min-h-screen bg-[var(--color-bg-primary)]">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Breadcrumbs -->
      <nav class="mb-8 text-sm">
        <a href="/" class="text-primary-600 hover:text-primary-800 transition-colors">Home</a>
        <span class="mx-2 text-[var(--color-text-tertiary)]">&rsaquo;</span>
        <a href="/blog" class="text-primary-600 hover:text-primary-800 transition-colors">Blog</a>
        <span class="mx-2 text-[var(--color-text-tertiary)]">&rsaquo;</span>
        <span class="text-[var(--color-text-secondary)]">{category}</span>
      </nav>

      <!-- Header -->
      <header class="mb-12 animate-fade-up">
        <!-- Category -->
        <div class="text-sm text-primary-600 font-semibold mb-4">
          {category}
        </div>

        <!-- Title -->
        <h1 class="text-4xl md:text-5xl font-bold text-[var(--color-text-primary)] mb-6">
          {title}
        </h1>

        <!-- Meta -->
        <div class="flex items-center gap-6 text-[var(--color-text-secondary)] mb-6">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <span>{author}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <time datetime={publishedAt}>
              {new Date(publishedAt).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
          </div>
        </div>

        <!-- Tags -->
        <div class="flex flex-wrap gap-2 mb-8">
          {tags.map((tag: string) => (
            <span class="inline-block bg-primary-50 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300 text-sm px-3 py-1 rounded-full">
              #{tag}
            </span>
          ))}
        </div>

        <!-- Description -->
        <p class="text-xl text-[var(--color-text-secondary)] leading-relaxed">
          {description}
        </p>
      </header>

      <!-- Content -->
      <div class="prose-blog max-w-none">
        <Content />
      </div>

      <!-- Related Articles -->
      {relatedPosts.length > 0 && (
        <section class="mt-16 pt-8 border-t border-[var(--color-border-primary)]">
          <h2 class="text-2xl font-bold text-[var(--color-text-primary)] mb-6">Related Articles</h2>
          <div class="grid gap-6 md:grid-cols-3">
            {relatedPosts.map((relatedPost) => (
              <a
                href={`/blog/${relatedPost.slug}`}
                class="group block bg-[var(--color-bg-secondary)] rounded-xl p-6 border border-[var(--color-border-secondary)] hover:border-primary-500 hover:shadow-[var(--shadow-card-hover)] transition-all duration-200"
              >
                <div class="text-sm text-primary-600 font-semibold mb-2">
                  {relatedPost.data.category}
                </div>
                <h3 class="text-lg font-semibold text-[var(--color-text-primary)] mb-2 group-hover:text-primary-600 transition-colors line-clamp-2">
                  {relatedPost.data.title}
                </h3>
                <p class="text-sm text-[var(--color-text-secondary)] line-clamp-2">
                  {relatedPost.data.description}
                </p>
                <div class="mt-4 text-sm text-primary-600 font-medium group-hover:underline">
                  Read more &rarr;
                </div>
              </a>
            ))}
          </div>
        </section>
      )}

      <!-- Footer -->
      <footer class="mt-16 pt-8 border-t border-[var(--color-border-primary)]">
        <!-- Share -->
        <div class="mb-8">
          <h3 class="text-lg font-semibold text-[var(--color-text-primary)] mb-4">Share this article</h3>
          <div class="flex gap-4">
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-4 py-2 bg-[#1DA1F2] text-white rounded-lg hover:opacity-90 transition-opacity"
            >
              Twitter
            </a>
            <a
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-4 py-2 bg-[#0A66C2] text-white rounded-lg hover:opacity-90 transition-opacity"
            >
              LinkedIn
            </a>
          </div>
        </div>

        <!-- CTA - Browse More Tools -->
        <div class="mb-8 p-6 bg-gradient-to-r from-primary-50 to-accent-50 dark:from-primary-950/20 dark:to-accent-950/20 rounded-xl border border-[var(--color-border-secondary)]">
          <h3 class="text-xl font-bold text-[var(--color-text-primary)] mb-2">Discover More AI Tools</h3>
          <p class="text-[var(--color-text-secondary)] mb-4">Explore our curated directory of 60+ AI tools for productivity, creativity, and innovation.</p>
          <a
            href="/"
            class="inline-flex items-center gap-2 px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors"
          >
            Browse AI Tools &rarr;
          </a>
        </div>

        <!-- Back to Blog -->
        <a
          href="/blog"
          class="inline-flex items-center gap-2 text-primary-600 font-semibold hover:text-primary-800 transition-colors"
        >
          &larr; Back to Blog
        </a>
      </footer>
    </div>
  </article>
</Layout>
