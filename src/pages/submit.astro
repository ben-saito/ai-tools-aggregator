---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout 
  title="Submit Your AI Tool" 
  description="Get your AI tool listed on AI Tools Aggregator. Free and premium listing options available."
>
  <Header />
  <main class="mx-auto max-w-4xl px-4 py-12">
    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-4">Submit Your AI Tool</h1>
      <p class="text-xl text-gray-600">
        Get your tool in front of thousands of users looking for AI solutions.
      </p>
    </div>

    <div class="grid gap-8 md:grid-cols-2 mb-12">
      <!-- Free Listing -->
      <div class="rounded-lg border-2 border-gray-200 p-6">
        <h2 class="text-2xl font-semibold mb-2">Free Listing</h2>
        <div class="text-3xl font-bold text-gray-900 mb-4">$0</div>
        <ul class="space-y-3 mb-6">
          <li class="flex items-start gap-2">
            <svg class="h-5 w-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-gray-700">Basic listing in directory</span>
          </li>
          <li class="flex items-start gap-2">
            <svg class="h-5 w-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-gray-700">Category page inclusion</span>
          </li>
          <li class="flex items-start gap-2">
            <svg class="h-5 w-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-gray-700">Search visibility</span>
          </li>
          <li class="flex items-start gap-2">
            <svg class="h-5 w-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-gray-700">Standard description (150 chars)</span>
          </li>
        </ul>
        <a 
          href="#free-form" 
          class="block w-full rounded-lg border-2 border-gray-900 bg-white px-6 py-3 text-center font-semibold text-gray-900 hover:bg-gray-50"
        >
          Submit Free Listing
        </a>
      </div>

      <!-- Premium Listing -->
      <div class="rounded-lg border-2 border-primary-600 bg-gradient-to-br from-primary-50 to-white p-6 relative">
        <div class="absolute top-4 right-4 rounded-full bg-primary-600 px-3 py-1 text-xs font-semibold text-white">
          POPULAR
        </div>
        <h2 class="text-2xl font-semibold mb-2">Premium Listing</h2>
        <div class="text-3xl font-bold text-gray-900 mb-4">
          $99<span class="text-lg font-normal text-gray-600">/month</span>
        </div>
        <ul class="space-y-3 mb-6">
          <li class="flex items-start gap-2">
            <svg class="h-5 w-5 text-primary-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-gray-900 font-medium">Featured on homepage</span>
          </li>
          <li class="flex items-start gap-2">
            <svg class="h-5 w-5 text-primary-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-gray-900 font-medium">Priority in search results</span>
          </li>
          <li class="flex items-start gap-2">
            <svg class="h-5 w-5 text-primary-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-gray-900 font-medium">Enhanced listing with custom description</span>
          </li>
          <li class="flex items-start gap-2">
            <svg class="h-5 w-5 text-primary-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-gray-900 font-medium">Direct contact button</span>
          </li>
          <li class="flex items-start gap-2">
            <svg class="h-5 w-5 text-primary-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-gray-900 font-medium">Monthly analytics report</span>
          </li>
        </ul>
        <a 
          href="mailto:hello@aitools.directory?subject=Premium%20Listing%20Inquiry" 
          class="block w-full rounded-lg bg-primary-600 px-6 py-3 text-center font-semibold text-white hover:bg-primary-700"
        >
          Contact for Premium
        </a>
      </div>
    </div>

    <!-- Submission Form -->
    <div id="free-form" class="rounded-lg border border-gray-200 bg-white p-8">
      <h2 class="text-2xl font-semibold mb-6">Submit Free Listing</h2>
      
      <form class="space-y-6" action="https://formspree.io/f/YOUR_FORM_ID" method="POST">
        <div>
          <label for="tool_name" class="block text-sm font-medium text-gray-700 mb-2">
            Tool Name *
          </label>
          <input
            type="text"
            id="tool_name"
            name="tool_name"
            required
            class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-500"
            placeholder="e.g., ChatGPT"
          />
        </div>

        <div>
          <label for="website" class="block text-sm font-medium text-gray-700 mb-2">
            Website URL *
          </label>
          <input
            type="url"
            id="website"
            name="website"
            required
            class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-500"
            placeholder="https://example.com"
          />
        </div>

        <div>
          <label for="category" class="block text-sm font-medium text-gray-700 mb-2">
            Category *
          </label>
          <select
            id="category"
            name="category"
            required
            class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-500"
          >
            <option value="">Select a category...</option>
            <option value="Text Generation">Text Generation</option>
            <option value="Image Generation">Image Generation</option>
            <option value="Video Generation">Video Generation</option>
            <option value="Audio & Music">Audio & Music</option>
            <option value="Code Development">Code Development</option>
            <option value="Marketing & Sales">Marketing & Sales</option>
            <option value="Productivity">Productivity</option>
            <option value="Research & Education">Research & Education</option>
            <option value="Design & Creative">Design & Creative</option>
            <option value="Data & Analytics">Data & Analytics</option>
          </select>
        </div>

        <div>
          <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
            Description * (max 150 characters)
          </label>
          <textarea
            id="description"
            name="description"
            required
            maxlength="150"
            rows="3"
            class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-500"
            placeholder="Brief description of your AI tool..."
          ></textarea>
          <p class="mt-1 text-sm text-gray-500">
            <span id="char-count">0</span>/150 characters
          </p>
        </div>

        <div>
          <label for="pricing" class="block text-sm font-medium text-gray-700 mb-2">
            Pricing Model *
          </label>
          <select
            id="pricing"
            name="pricing"
            required
            class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-500"
          >
            <option value="">Select pricing...</option>
            <option value="free">Free</option>
            <option value="freemium">Freemium</option>
            <option value="paid">Paid</option>
            <option value="open-source">Open Source</option>
          </select>
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
            Your Email *
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-500"
            placeholder="your@email.com"
          />
        </div>

        <div>
          <button
            type="submit"
            class="w-full rounded-lg bg-primary-600 px-6 py-3 font-semibold text-white hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
          >
            Submit Tool
          </button>
        </div>

        <p class="text-sm text-gray-500">
          By submitting, you agree to our terms and confirm you have the right to list this tool.
          We'll review your submission within 48 hours.
        </p>
      </form>
    </div>
  </main>

  <script>
    const textarea = document.getElementById('description') as HTMLTextAreaElement;
    const charCount = document.getElementById('char-count');

    textarea?.addEventListener('input', () => {
      if (charCount) {
        charCount.textContent = textarea.value.length.toString();
      }
    });
  </script>
</Layout>
