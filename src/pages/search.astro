---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import AdvancedSearch from '../components/AdvancedSearch.astro';
---

<Layout 
  title="Search AI Tools"
  description="Search and filter from 49+ AI tools with advanced search capabilities"
>
  <Header />
  <main class="mx-auto max-w-7xl px-4 py-8">
    <div class="mb-8 text-center">
      <h1 class="text-4xl font-bold mb-4">Search AI Tools</h1>
      <p class="text-xl text-[var(--color-text-secondary)]">
        Find the perfect AI tool with advanced search and filters
      </p>
    </div>

    <AdvancedSearch />
  </main>
</Layout>
