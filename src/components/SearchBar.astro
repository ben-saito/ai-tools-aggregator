---
import { getLangFromUrl, useTranslations } from '../lib/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="relative" id="search-section">
  <input
    type="text"
    id="search-input"
    placeholder={t('common.search')}
    class="w-full rounded-xl border border-[var(--color-border-primary)] bg-[var(--color-bg-elevated)] px-4 py-3 pr-10 text-[var(--color-text-primary)] placeholder-[var(--color-text-tertiary)] transition-all focus:border-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-500/20"
  />
  <svg
    class="absolute right-3 top-3.5 h-5 w-5 text-[var(--color-text-tertiary)]"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
    ></path>
  </svg>
</div>

<script>
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const toolCards = document.querySelectorAll('[data-tool-card]');

  searchInput?.addEventListener('input', (e) => {
    const searchTerm = (e.target as HTMLInputElement).value.toLowerCase();

    toolCards.forEach((card) => {
      const toolName = card.getAttribute('data-tool-name')?.toLowerCase() || '';
      const toolDescription = card.getAttribute('data-tool-description')?.toLowerCase() || '';
      const toolCategory = card.getAttribute('data-tool-category')?.toLowerCase() || '';

      const matches = toolName.includes(searchTerm) ||
                     toolDescription.includes(searchTerm) ||
                     toolCategory.includes(searchTerm);

      if (matches) {
        (card as HTMLElement).style.display = '';
      } else {
        (card as HTMLElement).style.display = 'none';
      }
    });
  });
</script>
