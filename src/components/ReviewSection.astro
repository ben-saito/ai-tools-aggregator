---
interface Props {
  toolId: string;
}

const { toolId } = Astro.props;
---
import ReviewEditModal from "./ReviewEditModal.astro";
import ReportModal from "./ReportModal.astro";



<div class="mt-12 border-t border-gray-200 pt-12" data-tool-id={toolId}>
  <h2 class="mb-8 text-2xl font-bold text-gray-900">Reviews & Ratings</h2>

  <!-- Reviews Stats -->
  <div id="reviews-stats" class="mb-8 rounded-lg border border-gray-200 bg-gray-50 p-6">
    <!-- Populated by JS -->
  </div>

  <!-- Review Form (if logged in) -->
  <div id="review-form-container" class="mb-12">
    <!-- Populated by JS -->
  </div>

  <!-- Reviews List -->
  <div id="reviews-list" class="space-y-6">
    <div class="text-center py-8">
      <div class="inline-block h-8 w-8 animate-spin rounded-full border-4 border-gray-200 border-t-blue-600"></div>
      <p class="mt-2 text-gray-600">Loading reviews...</p>
    </div>
  </div>

  <!-- Edit/Delete Modals -->
  <ReportModal />

  <ReviewEditModal />

</div>

<script>
  (async function() {
    // Wait for Supabase to load
    while (!window.__supabaseReady && typeof window.supabase === 'undefined') {
      await new Promise(resolve => setTimeout(resolve, 50));
    }

    // Get toolId from data attribute
    const reviewSection = document.querySelector('[data-tool-id]');
    const toolId = reviewSection?.getAttribute('data-tool-id');

    if (!toolId) {
      console.error('No toolId found');
      return;
    }

    // Initialize Supabase client
    const supabaseUrl = 'https://mqksqezqbauqymftrydy.supabase.co';
    const supabaseAnonKey = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Im1xa3NxZXpxYmF1cXltZnRyeWR5Iiwicm9sZSI6ImFub24iLCJpYXQiOjE3NzA2ODIwMDIsImV4cCI6MjA4NjI1ODAwMn0.Bf6nGo9I0skJWwFnXHHAKOBSBepYx7G8OHLw3Ih_Ytw';
    const supabase = window.supabase.createClient(supabaseUrl, supabaseAnonKey);

  // Helper functions
  async function getToolReviews(toolId) {
    const { data, error } = await supabase
      .from('reviews')
      .select(`
        *,
        profile:profiles(username, avatar_url, is_verified)
      `)
      .eq('tool_id', toolId)
      .order('created_at', { ascending: false });

    if (error) throw error;
    return data;
  }

  async function getToolStats(toolId) {
    const { data, error } = await supabase
      .from('tools_stats')
      .select('*')
      .eq('tool_id', toolId)
      .single();

    if (error && error.code !== 'PGRST116') throw error;
    return data;
  }

  async function submitReview(toolId, userId, rating, comment) {
    const { data, error } = await supabase
      .from('reviews')
      .insert({
        tool_id: toolId,
        user_id: userId,
        rating,
        comment,
        helpful_count: 0,
      })
      .select()
      .single();

    if (error) throw error;
    return data;
  }

  async function voteReviewHelpful(reviewId, userId) {
    const { data: existing } = await supabase
      .from('review_votes')
      .select('id')
      .eq('review_id', reviewId)
      .eq('user_id', userId)
      .single();

    if (existing) {
      await supabase
        .from('review_votes')
        .delete()
        .eq('id', existing.id);
      await supabase.rpc('decrement_helpful_count', { review_id: reviewId });
    } else {
      await supabase
        .from('review_votes')
        .insert({
          review_id: reviewId,
          user_id: userId,
        });
      await supabase.rpc('increment_helpful_count', { review_id: reviewId });
    }
  }

  async function loadReviews() {
    if (!toolId) return;
    
    try {
      const [reviews, stats] = await Promise.all([
        getToolReviews(toolId),
        getToolStats(toolId)
      ]);

      // Display stats
      const statsContainer = document.getElementById('reviews-stats');
      if (statsContainer && stats) {
        statsContainer.innerHTML = `
          <div class="flex items-center gap-8">
            <div>
              <div class="text-4xl font-bold text-gray-900">${stats.average_rating.toFixed(1)}</div>
              <div class="mt-1 flex items-center gap-1">
                ${renderStars(stats.average_rating)}
              </div>
              <div class="mt-1 text-sm text-gray-600">${stats.review_count} reviews</div>
            </div>
          </div>
        `;
      } else if (statsContainer) {
        statsContainer.innerHTML = `
          <div class="text-center text-gray-600">
            No reviews yet. Be the first to review!
          </div>
        `;
      }

      // Display reviews
      const reviewsList = document.getElementById('reviews-list');
      if (reviewsList) {
        if (reviews.length === 0) {
          reviewsList.innerHTML = `
            <div class="text-center py-8 text-gray-600">
              No reviews yet. Share your experience!
            </div>
          `;
        } else {
          reviewsList.innerHTML = reviews.map(review => `
            <div class="rounded-lg border border-gray-200 bg-white p-6">
              <div class="flex items-start justify-between">
                <div class="flex items-center gap-3">
                  ${review.profile?.avatar_url ? `
                    <img src="${review.profile.avatar_url}" alt="${review.profile.username}" class="h-10 w-10 rounded-full">
                  ` : `
                    <div class="h-10 w-10 rounded-full bg-gray-300 flex items-center justify-center text-gray-600 font-medium">
                      ${review.profile?.username?.charAt(0).toUpperCase() || '?'}
                    </div>
                  `}
                  <div>
                    <div class="flex items-center gap-2">
                        <div class="font-medium text-gray-900">${review.profile?.username || 'Anonymous'}</div>
                        ${review.profile?.is_verified ? `
                            <div class="group relative">
                                <svg class="h-4 w-4 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                                <div class="absolute bottom-full left-1/2 mb-2 hidden -translate-x-1/2 whitespace-nowrap rounded bg-gray-900 px-2 py-1 text-xs text-white group-hover:block">
                                    Verified User
                                </div>
                            </div>
                        ` : ''}
                    </div>
                    <div class="flex items-center gap-2">
                      <div class="flex items-center gap-1">
                        ${renderStars(review.rating)}
                      </div>
                      <span class="text-sm text-gray-500">
                        ${new Date(review.created_at).toLocaleDateString()}
                      </span>
                    </div>
                  </div>
                </div>
              </div>
              <p class="mt-4 text-gray-700">${review.comment}</p>
              <div class="mt-4 flex items-center gap-4">
                <button 
                  class="helpful-btn flex items-center gap-1 text-sm text-gray-600 hover:text-blue-600"
                  data-review-id="${review.id}"
                >
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
                  </svg>
                  Helpful (${review.helpful_count})
                </button>
              </div>
            </div>
          `).join('');

          // Add helpful button listeners
          document.querySelectorAll('.helpful-btn').forEach(btn => {
            btn.addEventListener('click', async (e) => {
              const reviewId = e.currentTarget.dataset.reviewId;
              const { data: { session } } = await supabase.auth.getSession();
              
              if (!session) {
                alert('Please login to vote');
                return;
              }

              if (reviewId) {
                await voteReviewHelpful(reviewId, session.user.id);
                loadReviews(); // Reload to show updated count
              }
            });
          });
        }
      }
    } catch (error) {
      console.error('Error loading reviews:', error);
    }
  }

  function renderStars(rating) {
    const fullStars = Math.floor(rating);
    const hasHalfStar = rating % 1 >= 0.5;
    const emptyStars = 5 - fullStars - (hasHalfStar ? 1 : 0);

    return `
      ${'<svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>'.repeat(fullStars)}
      ${hasHalfStar ? '<svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" opacity="0.5"/></svg>' : ''}
      ${'<svg class="h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>'.repeat(emptyStars)}
    `;
  }

  async function setupReviewForm() {
    const { data: { session } } = await supabase.auth.getSession();
    const formContainer = document.getElementById('review-form-container');
    
    if (!formContainer) return;

    if (session) {
      formContainer.innerHTML = `
        <div class="rounded-lg border border-gray-200 bg-white p-6">
          <h3 class="mb-4 text-lg font-semibold">Write a Review</h3>
          <form id="review-form" class="space-y-4">
            <div>
              <label class="mb-2 block text-sm font-medium text-gray-700">Rating</label>
              <div class="flex gap-2">
                ${[1, 2, 3, 4, 5].map(star => `
                  <button type="button" class="rating-star text-3xl text-gray-300 hover:text-yellow-400" data-rating="${star}">
                    â˜…
                  </button>
                `).join('')}
              </div>
              <input type="hidden" id="rating-input" name="rating" required>
            </div>
            <div>
              <label for="comment" class="mb-2 block text-sm font-medium text-gray-700">Your Review</label>
              <textarea
                id="comment"
                name="comment"
                rows="4"
                class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-blue-500 focus:outline-none"
                placeholder="Share your experience with this tool..."
                required
              ></textarea>
            </div>
            <button
              type="submit"
              class="rounded-lg bg-blue-600 px-6 py-2 font-medium text-white hover:bg-blue-700"
            >
              Submit Review
            </button>
          </form>
        </div>
      `;

      // Rating stars interaction
      let selectedRating = 0;
      document.querySelectorAll('.rating-star').forEach((star, index) => {
        star.addEventListener('click', () => {
          selectedRating = index + 1;
          document.getElementById('rating-input')?.setAttribute('value', selectedRating.toString());
          
          // Update star colors
          document.querySelectorAll('.rating-star').forEach((s, i) => {
            if (i < selectedRating) {
              s.classList.remove('text-gray-300');
              s.classList.add('text-yellow-400');
            } else {
              s.classList.remove('text-yellow-400');
              s.classList.add('text-gray-300');
            }
          });
        });
      });

      // Form submission
      document.getElementById('review-form')?.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(e.target);
        const rating = parseInt(formData.get('rating'));
        const comment = formData.get('comment');

        if (!rating || !comment) {
          alert('Please provide a rating and comment');
          return;
        }

        try {
          await submitReview(toolId, session.user.id, rating, comment);
          alert('Review submitted successfully!');
          e.target.reset();
          selectedRating = 0;
          document.querySelectorAll('.rating-star').forEach(s => {
            s.classList.remove('text-yellow-400');
            s.classList.add('text-gray-300');
          });
          loadReviews(); // Reload reviews
        } catch (error) {
          if (error.code === '23505') {
            alert('You have already reviewed this tool');
          } else {
            alert('Error submitting review. Please try again.');
          }
        }
      });
    } else {
      formContainer.innerHTML = `
        <div class="rounded-lg border border-gray-200 bg-gray-50 p-6 text-center">
          <p class="mb-4 text-gray-600">Login to write a review</p>
          <a href="/login" class="inline-block rounded-lg bg-blue-600 px-6 py-2 font-medium text-white hover:bg-blue-700">
            Login
          </a>
        </div>
      `;
    }
  }

    // Initialize
    loadReviews();
    setupReviewForm();
  })();
</script>

<!-- Additional script for edit/delete/report buttons -->
<script>
  // Listen for clicks on edit/delete/report buttons (delegated event handling)
  document.addEventListener('click', async (e) => {
    const target = e.target.closest('button');
    if (!target) return;

    // Edit button
    if (target.classList.contains('edit-review-btn')) {
      const reviewId = target.dataset.reviewId;
      const rating = parseInt(target.dataset.rating);
      const comment = target.dataset.comment;
      window.openEditModal?.(reviewId, rating, comment);
    }

    // Delete button
    if (target.classList.contains('delete-review-btn')) {
      const reviewId = target.dataset.reviewId;
      window.openDeleteModal?.(reviewId);
    }

    // Report button
    if (target.classList.contains('report-review-btn')) {
      const reviewId = target.dataset.reviewId;
      window.openReportModal?.(reviewId);
    }
  });
</script>

<!-- Add edit/delete/report buttons to review cards -->
<script>
  async function addReviewActionButtons() {
    // Use the supabase client created in the main script
    const supabaseUrl = 'https://mqksqezqbauqymftrydy.supabase.co';
    const supabaseAnonKey = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Im1xa3NxZXpxYmF1cXltZnRyeWR5Iiwicm9sZSI6ImFub24iLCJpYXQiOjE3NzA2ODIwMDIsImV4cCI6MjA4NjI1ODAwMn0.Bf6nGo9I0skJWwFnXHHAKOBSBepYx7G8OHLw3Ih_Ytw';
    const supabase = window.supabase.createClient(supabaseUrl, supabaseAnonKey);
    
    // Wait for reviews to load
    await new Promise(resolve => setTimeout(resolve, 1000));

    const { data: { session } } = await supabase.auth.getSession();
    const currentUserId = session?.user?.id;

    // Find all review cards
    const reviewCards = document.querySelectorAll('#reviews-list > div');
    
    reviewCards.forEach(card => {
      const helpfulBtn = card.querySelector('.helpful-btn');
      if (!helpfulBtn) return;

      const reviewId = helpfulBtn.dataset.reviewId;
      const buttonContainer = helpfulBtn.parentElement;

      // Check if buttons already added
      if (buttonContainer.querySelector('.review-actions')) return;

      // Create action buttons container
      const actionsDiv = document.createElement('div');
      actionsDiv.className = 'review-actions flex items-center gap-3';

      // Get review data to check ownership
      const reviewData = helpfulBtn.closest('[data-user-id]');
      const isOwner = reviewData && reviewData.dataset.userId === currentUserId;

      // Add edit/delete buttons if owner
      if (isOwner) {
        const editBtn = document.createElement('button');
        editBtn.className = 'edit-review-btn text-sm text-gray-600 hover:text-primary-600 flex items-center gap-1';
        editBtn.dataset.reviewId = reviewId;
        editBtn.innerHTML = `
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Edit
        `;
        actionsDiv.appendChild(editBtn);

        const deleteBtn = document.createElement('button');
        deleteBtn.className = 'delete-review-btn text-sm text-gray-600 hover:text-red-600 flex items-center gap-1';
        deleteBtn.dataset.reviewId = reviewId;
        deleteBtn.innerHTML = `
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
          Delete
        `;
        actionsDiv.appendChild(deleteBtn);
      }

      // Add report button (for all users)
      const reportBtn = document.createElement('button');
      reportBtn.className = 'report-review-btn text-sm text-gray-600 hover:text-red-600 flex items-center gap-1';
      reportBtn.dataset.reviewId = reviewId;
      reportBtn.innerHTML = `
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9" />
        </svg>
        Report
      `;
      actionsDiv.appendChild(reportBtn);

      // Make container flex with justify-between
      buttonContainer.classList.add('justify-between');
      buttonContainer.appendChild(actionsDiv);
    });
  }

  // Run when page loads and after reviews are rendered
  if (window.__supabaseReady) {
    addReviewActionButtons();
  } else {
    window.addEventListener('supabase-ready', addReviewActionButtons);
  }

  // Also run after a delay to catch dynamically loaded reviews
  setTimeout(addReviewActionButtons, 2000);
</script>
