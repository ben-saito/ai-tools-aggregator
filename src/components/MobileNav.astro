---
import { categories } from '../lib/tools';
import { getLangFromUrl } from '../lib/i18n';

const lang = getLangFromUrl(Astro.url);
const currentPath = Astro.url.pathname;
---

<!-- Mobile menu button -->
<button
  id="mobile-menu-button"
  class="lg:hidden rounded-md p-2 text-gray-600 hover:bg-gray-100 hover:text-primary-600"
  aria-label="Toggle mobile menu"
>
  <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
  </svg>
</button>

<!-- Mobile menu overlay -->
<div
  id="mobile-menu"
  class="fixed inset-0 z-50 hidden bg-gray-900 bg-opacity-50"
>
  <div class="fixed inset-y-0 right-0 w-64 bg-white shadow-xl">
    <div class="flex items-center justify-between border-b border-gray-200 p-4">
      <span class="text-lg font-bold text-primary-600">{lang === 'ja' ? 'メニュー' : 'Menu'}</span>
      <button
        id="mobile-menu-close"
        class="rounded-md p-2 text-gray-600 hover:bg-gray-100"
        aria-label="Close mobile menu"
      >
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    
    <!-- Language Switcher at Top -->
    <div class="border-b border-gray-200 p-4">
      <p class="mb-2 text-xs font-semibold text-gray-500 uppercase">Language / 言語</p>
      <div class="flex items-center gap-2">
        <a 
          href={lang === 'ja' ? currentPath.replace(/^\/ja/, '') || '/' : currentPath}
          class={`flex-1 px-4 py-2 text-center text-sm font-medium rounded-lg transition ${lang === 'en' ? 'bg-primary-600 text-white' : 'bg-gray-100 text-gray-600 hover:bg-gray-200'}`}
          data-lang="en"
        >
          English
        </a>
        <a 
          href={lang === 'en' ? `/ja${currentPath}` : currentPath}
          class={`flex-1 px-4 py-2 text-center text-sm font-medium rounded-lg transition ${lang === 'ja' ? 'bg-primary-600 text-white' : 'bg-gray-100 text-gray-600 hover:bg-gray-200'}`}
          data-lang="ja"
        >
          日本語
        </a>
      </div>
    </div>
    
    <nav class="overflow-y-auto p-4">
      <a href={lang === 'ja' ? '/ja' : '/'} class="block py-3 text-gray-700 hover:text-primary-600">{lang === 'ja' ? 'ホーム' : 'Home'}</a>
      <a href={lang === 'ja' ? '/ja/blog' : '/blog'} class="block py-3 text-gray-700 hover:text-primary-600">{lang === 'ja' ? 'ブログ' : 'Blog'}</a>
      <a href={lang === 'ja' ? '/ja/search' : '/search'} class="block py-3 text-gray-700 hover:text-primary-600">{lang === 'ja' ? '検索' : 'Search'}</a>
      <a href={lang === 'ja' ? '/ja/rankings' : '/rankings'} class="block py-3 text-gray-700 hover:text-primary-600">{lang === 'ja' ? 'ランキング' : 'Rankings'}</a>
      
      <div class="mt-2 border-t border-gray-200 pt-2">
        <p class="mb-2 text-sm font-semibold text-gray-500">{lang === 'ja' ? 'カテゴリー' : 'Categories'}</p>
        {categories.map((category) => (
          <a
            href={lang === 'ja' ? `/ja/categories/${category.slug}` : `/categories/${category.slug}`}
            class="block py-2 pl-3 text-sm text-gray-700 hover:text-primary-600"
          >
            <span class="mr-2">{category.icon}</span>
            {category.name}
          </a>
        ))}
      </div>
      
      <div class="mt-4 border-t border-gray-200 pt-4">
        <a href={lang === 'ja' ? '/ja/submit' : '/submit'} class="block rounded-lg bg-primary-600 px-4 py-3 text-center font-semibold text-white hover:bg-primary-700">
          {lang === 'ja' ? 'ツール登録' : 'Submit Tool'}
        </a>
        <a href={lang === 'ja' ? '/ja/favorites' : '/favorites'} class="block py-3 text-gray-700 hover:text-primary-600">{lang === 'ja' ? 'お気に入り' : 'Favorites'}</a>
        <a href={lang === 'ja' ? '/ja/about' : '/about'} class="mt-2 block py-3 text-gray-700 hover:text-primary-600">{lang === 'ja' ? '概要' : 'About'}</a>
        <a href={lang === 'ja' ? '/ja/login' : '/login'} class="mt-2 block py-3 text-gray-700 hover:text-primary-600">{lang === 'ja' ? 'ログイン' : 'Login'}</a>
      </div>
    </nav>
  </div>
</div>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const menuClose = document.getElementById('mobile-menu-close');
  const menu = document.getElementById('mobile-menu');
  
  menuButton?.addEventListener('click', () => {
    menu?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  });
  
  menuClose?.addEventListener('click', () => {
    menu?.classList.add('hidden');
    document.body.style.overflow = '';
  });
  
  menu?.addEventListener('click', (e) => {
    if (e.target === menu) {
      menu.classList.add('hidden');
      document.body.style.overflow = '';
    }
  });

  // Store language preference when clicking language links in mobile menu
  menu?.querySelectorAll('a[data-lang]').forEach(link => {
    link.addEventListener('click', (e) => {
      const lang = link.getAttribute('data-lang');
      if (lang) {
        localStorage.setItem('preferred-lang', lang);
        sessionStorage.removeItem('lang-redirected');
      }
      // Close menu on language change
      menu.classList.add('hidden');
      document.body.style.overflow = '';
    });
  });
</script>
