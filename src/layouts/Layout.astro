---
interface Props {
  title: string;
  description?: string;
  image?: string;
  canonical?: string;
}

const { 
  title, 
  description = 'Discover the best AI tools for 2026. Curated directory of 60+ AI tools across 10 categories including text generation, image creation, coding assistants, and more.',
  image = '/og-image.png',
  canonical
} = Astro.props;

// Remove trailing slash from siteUrl to avoid double slashes (siteUrl ends with /, pathname starts with /)
const siteUrl = (Astro.site?.toString() || 'https://ai-tools-aggregator.vercel.app').replace(/\/$/, '');
const fullCanonical = canonical ? `${siteUrl}${canonical}` : `${siteUrl}${Astro.url.pathname}`;
const fullImage = image.startsWith('http') ? image : `${siteUrl}${image}`;

// Optimize title tag for SEO (max 60 chars for Google search results)
let pageTitle: string;
const titleLength = title.length;

if (titleLength <= 45) {
  // Short title: add full suffix (15 chars)
  pageTitle = `${title} | AI Tools Hub`;
} else if (titleLength <= 52) {
  // Medium title: add short suffix (8 chars)
  pageTitle = `${title} - AI Hub`;
} else {
  // Long title: no suffix (keep title under 60 chars)
  pageTitle = title.length <= 60 ? title : title.substring(0, 57) + '...';
}
import ComparisonBar from '../components/ComparisonBar.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';
